{
  "name": "grant_ccrf",
  "pattern": "/running-your-organisation/funding/community-capacity-resilience-fund/projects/:project_slug",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-grant-ccrf",
          "template": ">context.metaData.handlebars.queries.grants_grant",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "types",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-grant-ccrf",
            "template": ">context.metaData.handlebars.queries.grants_ccrf-aggs"
          },
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.events_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.grants_ccrf",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}