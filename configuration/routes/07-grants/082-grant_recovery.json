{
  "name": "grant_recovery",
  "debug": true,
  "pattern": "/support/coronavirus/funding/scottish-government/recovery-fund/recipients/:grant_id(/:junk)",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "sg-grant-recovery",
          "template": ">context.metaData.handlebars.queries.grants_grant",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    "context.metaData.commonTasks.getOrganisation",
    "context.metaData.commonTasks.getOrganisationResponses",
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_related_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-related-coronavirus"
          },
          {
            "name": "types",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "sg-grant-recovery",
            "template": ">context.metaData.handlebars.queries.grants_recovery-aggs"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.funding_grants_recovery_grant-header",
              "body": ">context.metaData.handlebars.templates.funding_grants_recovery_grant-body",
              "rightSidebar": ">context.metaData.handlebars.templates.support_coronavirus_page-sidebar",
              "footer": ">context.metaData.handlebars.templates.page-news-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}