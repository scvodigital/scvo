{
  "name": "event",
  "pattern": "/events/:id(/:junk)",
  "debug": false,
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-event",
          "template": ">context.metaData.handlebars.queries.events_event",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "related_events",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-event",
            "template": ">context.metaData.handlebars.queries.events_related"
          },
          {
            "name": "same_events",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-event",
            "template": ">context.metaData.handlebars.queries.events_same"
          },
          {
            "name": "types",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-event",
            "template": ">context.metaData.handlebars.queries.events_aggs"
          },
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.events_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.events_event",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}