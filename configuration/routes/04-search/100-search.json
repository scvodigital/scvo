{
  "name": "main_search",
  "debug": false,
  "pattern": "/search",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page,scvo-post,scvo-staff,scvo-member,cjs-vacancy,charter-signatory-digitalparticipation,goodmoves-vacancy,fs-fund,scvo-document-evidence,scvo-event,scvo-grant-charter,scvo-grant-ccrf,scvo-grant-cats,tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
          "template": ">context.metaData.handlebars.queries.search_search"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.search_search-head-tags",
              "rightSidebar": ">context.metaData.handlebars.templates.search_search-form",
              "body": ">context.metaData.handlebars.templates.search_search-results"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
