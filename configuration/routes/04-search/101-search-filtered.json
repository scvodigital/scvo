{
  "name": "search-filtered",
  "debug": false,
  "pattern": {
    "main_section": "/:section/search",
    "digital_section": "/support/digital/search"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "search_results",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page,scvo-resource",
          "template": ">context.metaData.handlebars.queries.search_search-filtered"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.search_search-head-tags",
              "rightSidebar": ">context.metaData.handlebars.templates.search_search-form",
              "body": ">context.metaData.handlebars.templates.search_search-results"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
