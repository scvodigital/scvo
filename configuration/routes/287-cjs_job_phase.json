{
  "name": "cjs_job_phase",
  "pattern": "/jobs/community-jobs-scotland/vacancies",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.pages_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.jobs_cjs-vacancy-search-head-tags",
              "body": ">context.metaData.handlebars.templates.jobs_cjs-vacancy-phase",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
