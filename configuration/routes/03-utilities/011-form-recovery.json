{
  "name": "form_recovery_redirect",
  "pattern": "/form-recovery/:form/:id/:date/:uid",
  "debug": true,
  "tasks": [
    {
      "name": "path",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/form_backups/{{{@root.request.params.form}}}/{{{@root.request.params.id}}}/{{{@root.request.params.date}}}/{{{@root.request.params.uid}}}/restoreUrl"
      }
    },
    {
      "name": "recovery_link",
      "taskModule": "firebaseRtbGet",
      "renderer": "handlebars",
      "config": {
        "appName": "scvo",
        "pathTemplate": "{{{@root.data.path}}}"
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{{default @root.data.recovery_link '/form_backups/no_such_form'}}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.templates.utilities_form-recovery",
            "parts": {},
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}