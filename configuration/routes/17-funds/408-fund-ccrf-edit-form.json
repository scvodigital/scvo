{
  "name": "fund_ccrf_edit_form",
  "debug": false,
  "pattern": "/funding/community-capacity-resilience-fund/apply/edit/:session_key",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "application_data",
      "taskModule": "request",
      "config": {
        "optionsTemplates": {
          "request": ">context.metaData.handlebars.templates.utilities_scvo-grant"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "check_for_application",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "and": [ { "==": [ { "var": "data.application_data.request.grant_data" }, null ] } ]
          },
          "fund_ccrf_apply_missing",
          false
        ]
      }
    },
    {
      "name": "check_call",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "or": [
              { "==": [ { "var": "data.application_data.request.grant_data.Call__c" }, "PLACEHOLDER - IGNORE UNLESS MULTIPLE CONCURRENT CALLS" ] }
            ]
          },
          "fund_ccrf_apply_unauthorised",
          false
        ]
      }
    },
    {
      "name": "check_for_authorisation",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "or": [
              {
                "!=": [
                  {
                    "var": "data.application_data.request.grant_data.Application_Satus__c"
                  },
                  "Applied"
                ]
              }
            ]
          },
          "fund_ccrf_apply_unauthorised",
          false
        ]
      }
    },
    {
      "name": "form_data",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.funding_ccrf_2021_apply-form-data",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "style": "fullWidth",
              "head": ">context.metaData.handlebars.templates.funding_ccrf_2021_apply-form-head",
              "header": ">context.metaData.handlebars.templates.funding_ccrf_2021_edit-header",
              "body": ">context.metaData.handlebars.templates.funding_ccrf_2021_apply-form-body",
              "footer": ">context.metaData.handlebars.templates.page-news-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}