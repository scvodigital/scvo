{
  "name": "post_blog",
  "debug": false,
  "pattern": {
    "top": "/policy/blog",
    "topic": "/policy/:topic/blog"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page-topic"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "posts",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.posts_policy-topic-blog",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            {
              "in": [
                "view=rss",
                {
                  "var": "request.fullUrl"
                }
              ]
            },
            "rss",
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "rss": {
            "layout": ">context.metaData.handlebars.layouts.rss",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_tag-rss-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_tag-rss"
            },
            "contentType": "application/rss+xml"
          },
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_tag-head-tags",
              "header": ">context.metaData.handlebars.templates.policy_blog-header",
              "body": ">context.metaData.handlebars.templates.posts_tag-results"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}