{
  "name": "vote_charity_awards",
  "debug": true,
  "pattern": "/scottish-charity-awards/finalists-2019/*category/*vote",
  "metaData": {
    "awards-info": "{:../../data/info-charity-awards.json}"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-charityawards",
          "template": ">context.metaData.handlebars.queries.pages_charity-awards-vote",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "goodhq",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "goodhq-organisation",
          "template": ">context.metaData.handlebars.queries.pages_charity-awards-goodhq"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "volunteering-opportunities",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "milo-volunteering-opportunity",
          "template": ">context.metaData.handlebars.queries.pages_charity-awards-volunteering-opportunities"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.awards",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.awards_vote-header",
              "body": ">context.metaData.handlebars.templates.awards_vote-body",
              "footer": ">context.metaData.handlebars.templates.awards_footer",
              "footer": ">context.metaData.handlebars.templates.awards-vote-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}