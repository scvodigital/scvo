{
  "name": "five_hundred",
  "pattern": "/500",
  "debug": true,
  "tasks": [
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "body": ">context.metaData.handlebars.templates.error-500"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}