{
  "name": "explore",
  "pattern": "/explore",
  "debug": false,
  "errorRoute": "five_hundred",
  "metaData": {
    "title": "Explore SCVO"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.getOrganisationInfo",
    {
      "name": "explore_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "oscr",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "oscr-charity",
            "template": ">context.metaData.handlebars.queries.members_explore-oscr"
          },
          {
            "name": "grants",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-grant-cats,scvo-grant-ccrf,scvo-grant-charter,scvo-grant-cyber",
            "template": ">context.metaData.handlebars.queries.members_explore-grants"
          },
          {
            "name": "charters",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "charter-signatory-digitalparticipation,charter-signatory-humanrights",
            "template": ">context.metaData.handlebars.queries.members_explore-charters"
          },
          {
            "name": "vacancies",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "cjs-vacancy,goodmoves-vacancy",
            "template": ">context.metaData.handlebars.queries.members_explore-vacancies"
          },
          {
            "name": "volunteering",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "milo-volunteering-opportunity",
            "template": ">context.metaData.handlebars.queries.members_explore-volunteering"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.account_explore-header",
              "body": ">context.metaData.handlebars.templates.account_explore-body"
            },
            "contentType": "text/html"
          }
        }
      }
    }

  ]
}