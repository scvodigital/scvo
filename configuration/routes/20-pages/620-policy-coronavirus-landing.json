{
  "name": "policy_coronavirus_landing",
  "debug": false,
  "pattern": "/policy/coronavirus",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "coronavirus_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-post",
            "template": ">context.metaData.handlebars.queries.posts_policy-coronavirus"
          },
          {
            "name": "evidence_library",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-document-evidence",
            "template": ">context.metaData.handlebars.queries.evidence-library_document-search-coronavirus"
          },
          {
            "name": "types",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-document-evidence",
            "template": ">context.metaData.handlebars.queries.evidence-library_document-aggs"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.policy_coronavirus_landing-header",
              "footer": ">context.metaData.handlebars.templates.policy_coronavirus_landing-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}