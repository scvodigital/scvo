{
  "name": "coronavirus_recovery_edit_form",
  "debug": true,
  "pattern": "/support/coronavirus/funding/scottish-government/community-recovery/apply/edit/:session_key",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "application_data",
      "taskModule": "request",
      "config": {
        "optionsTemplates": {
          "request": ">context.metaData.handlebars.templates.utilities_grantmanager-grant"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "award_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "sg-grant-recovery",
          "template": ">context.metaData.handlebars.queries.grants_recovery-awarded"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "check_for_awarded",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "and": [
              {
                "!=": [
                  { "var": "data.award_data.hits.total" },
                  0
                ]
              }
            ]
          },
          "coronavirus_recovery_apply_already_awarded",
          false
        ]
      }
    },
    {
      "name": "check_for_application",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "and": [
              {
                "!=": [
                  {
                    "var": "data.application_data.request.data.data_object.get_grant.totalSize"
                  },
                  1
                ]
              }
            ]
          },
          "coronavirus_recovery_apply_missing",
          false
        ]
      }
    },
    {
      "name": "check_for_authorisation",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "and": [
              {
                "!=": [
                  {
                    "var": "data.application_data.request.data.data_object.get_grant.records.0.Status__c"
                  },
                  "Awarded"
                ]
              }
            ]
          },
          "coronavirus_recovery_apply_unauthorised",
          false
        ]
      }
    },
    {
      "name": "form_data",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.support_coronavirus_funding_recovery_apply-form-data",
        "output": "data",
        "parseJson": true
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.support_coronavirus_funding_recovery_edit-header",
              "body": ">context.metaData.handlebars.templates.support_coronavirus_funding_recovery_apply-form",
              "rightSidebar": ">context.metaData.handlebars.templates.support_coronavirus_page-sidebar",
              "footer": ">context.metaData.handlebars.templates.page-news-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}