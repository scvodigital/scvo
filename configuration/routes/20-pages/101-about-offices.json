{
  "name": "page_about_offices",
  "debug": false,
  "pattern": "__DISABLED__/about/offices",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "bicycles",
      "taskModule": "request",
      "renderer": "handlebars",
      "config": {
        "options": {
          "edinburgh": { "url": "https://api.citybik.es/v2/networks/edinburgh-cycle-hire", "json": true },
          "glasgow": { "url": "https://api.citybik.es/v2/networks/nextbike-glasgow", "json": true }
        }
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.page-header",
              "body": ">context.metaData.handlebars.templates.about_offices-body"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}