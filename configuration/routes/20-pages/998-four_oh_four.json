{
  "name": "four_oh_four",
  "pattern": "/404",
  "debug": true,
  "defaultStatusCode": 404,
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "not_found",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page,scvo-post,scvo-event",
          "template": ">context.metaData.handlebars.queries.errors_relevant-content"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "body": ">context.metaData.handlebars.templates.error-404"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
