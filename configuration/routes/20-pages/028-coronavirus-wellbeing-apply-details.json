{
  "name": "coronavirus_wellbeing_apply_details",
  "debug": true,
  "pattern": "/support/coronavirus/funding/for-organisations/wellbeing-fund/apply/:charity_number",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "oscr_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "web-content-production",
          "type": "oscr-charity",
          "template": ">context.metaData.handlebars.queries.utilities_search-oscr-lookup"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "check_charity",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "==": [
              {
                "var": "data.oscr_data.hits.hits.length"
              },
              0
            ]
          },
          "coronavirus_wellbeing_apply",
          false
        ]
      }
    },
    {
      "name": "milo_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "web-content-production",
          "type": "milo-organisation",
          "template": ">context.metaData.handlebars.queries.utilities_search-org-lookup"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_related_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-related-coronavirus"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.page-header",
              "body": ">context.metaData.handlebars.templates.support_coronavirus_funding_wellbeing_apply-details",
              "rightSidebar": ">context.metaData.handlebars.templates.support_coronavirus_page-sidebar",
              "footer": ">context.metaData.handlebars.templates.page-news-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}