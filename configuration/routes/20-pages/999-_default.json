{
  "name": "_default",
  "debug": true,
  "pattern": "/*path",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "related_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-post",
            "template": ">context.metaData.handlebars.queries.pages_posts-random"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "header": ">context.metaData.handlebars.templates.pages_page-header",
              "body": ">context.metaData.handlebars.templates.pages_page-body",
              "rightSidebar": ">context.metaData.handlebars.templates.pages_page-sidebar",
              "footer": ">context.metaData.handlebars.templates.pages_page-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}