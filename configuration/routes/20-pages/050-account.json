{
  "name": "account",
  "pattern": "/account",
  "debug": true,
  "errorRoute": "five_hundred",
  "metaData": {
    "title": "My account"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.fullSignUpRequired",
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.account_account",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }

  ]
}