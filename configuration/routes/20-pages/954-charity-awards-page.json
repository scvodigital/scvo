{
  "name": "page_charity_awards",
  "debug": true,
  "pattern": {
    "index": "/scottish-charity-awards",
    "section": "/scottish-charity-awards/*path"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.awards",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.awards_landing-header",
              "footer": ">context.metaData.handlebars.templates.awards_footer",
              "body": ">context.metaData.handlebars.templates.awards_landing-body"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}