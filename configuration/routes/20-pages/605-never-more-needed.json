{
  "name": "never_more_needed_page",
  "debug": false,
  "pattern": {
    "landing": "/policy/campaigns/never-more-needed",
    "section": "/policy/campaigns/never-more-needed/:level_1(/:level_2)(/:level_3)(/:level_4)(/:level_5)(/:level_6)(/:level_7)(/:level_8)"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-page",
          "template": ">context.metaData.handlebars.queries.pages_page",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_related_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-related-never-more-needed"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "postsRelated",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.posts_related-never-more-needed"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.page-header",
              "body": ">context.metaData.handlebars.templates.page-body",
              "rightSidebar": ">context.metaData.handlebars.templates.policy_campaigns_never-more-needed-sidebar",
              "footer": ">context.metaData.handlebars.templates.page-posts-news-footer"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}