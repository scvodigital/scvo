{
  "name": "post_author",
  "pattern": "/post/author/:author_slug",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.posts_author",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "author_profile",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-author",
            "template": ">context.metaData.handlebars.queries.posts_author-profile"
          },
          {
            "name": "staff_profile",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-staff",
            "template": ">context.metaData.handlebars.queries.posts_staff-profile"
          },
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.pages_gathering-splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_author-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_author",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}