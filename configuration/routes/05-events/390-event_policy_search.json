{
  "name": "event_policy_search",
  "debug": true,
  "pattern": "/policy-research/events",
  "metaData": {
    "searchUrl": "/policy-research/events"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-event",
          "template": ">context.metaData.handlebars.queries.events_policy-search"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "types",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-event",
            "template": ">context.metaData.handlebars.queries.events_policy-aggs"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.events_policy-search-head-tags",
              "header": ">context.metaData.handlebars.templates.events_policy-search-header",
              "leftSidebar": ">context.metaData.handlebars.templates.events_search-form",
              "rightSidebar": ">context.metaData.handlebars.templates.events_policy-search-sidebar",
              "body": ">context.metaData.handlebars.templates.events_search-results"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}