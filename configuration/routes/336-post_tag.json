{
  "name": "post_tag",
  "pattern": "/post/tags/:tag_slug",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.posts_tag",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.pages_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            {
              "in": [
                "view=rss",
                {
                  "var": "request.fullUrl"
                }
              ]
            },
            "rss",
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "rss": {
            "layout": ">context.metaData.handlebars.layouts.rss",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_tag-rss-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_tag-rss"
            },
            "contentType": "application/rss+xml"
          },
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_tag-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_tag",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}