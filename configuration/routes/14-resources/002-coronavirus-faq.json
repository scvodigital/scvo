{
  "name": "resource_coronavirus_faq",
  "debug": false,
  "pattern": "/support/coronavirus/faq/:faq_slug",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-resource",
          "template": ">context.metaData.handlebars.queries.resources_resource",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_related_posts",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-related-coronavirus"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.posts_head-tags",
              "header": ">context.metaData.handlebars.templates.posts_resource-header",
              "body": ">context.metaData.handlebars.templates.posts_resource-urgent-body",
              "rightSidebar": ">context.metaData.handlebars.templates.page-sidebar",
              "footer": ">context.metaData.handlebars.templates.posts_resource-footer"
            }
          }
        }
      }
    }
  ]
}