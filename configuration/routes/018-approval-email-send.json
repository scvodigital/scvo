{
  "name": "approval-email-send",
  "pattern": "/approval-email-send",
  "debug": true,
  "errorRoute": "five_hundred",
  "acceptedVerbs": "POST,GET",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfo",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireUser/?user_id={{@root.data.auth.uid}}"
      }
    },
    {
      "name": "accountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "sendEmail",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.account_email_approval"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": "/approval-required",
        "statusCode": 302
      }
    }
  ]
}