{
  "name": "evidence_library_document",
  "debug": false,
  "pattern": "/policy/evidence-library/:library_slug",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../data/elasticsearch-index.txt}",
          "type": "scvo-document-evidence",
          "template": ">context.metaData.handlebars.queries.evidence-library_document",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "types",
            "index": "{$../../data/elasticsearch-index.txt}",
            "type": "scvo-document-evidence",
            "template": ">context.metaData.handlebars.queries.evidence-library_document-aggs"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "header": ">context.metaData.handlebars.templates.policy_evidence-library_document-header",
              "leftSidebar": ">context.metaData.handlebars.templates.policy_evidence-library_search-form",
              "rightSidebar": ">context.metaData.handlebars.templates.page-sidebar",
              "body": ">context.metaData.handlebars.templates.policy_evidence-library_document-body"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}