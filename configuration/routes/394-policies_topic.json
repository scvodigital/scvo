{
  "name": "page_policies_topic",
  "debug": true,
  "pattern": "/policy-research/policies/:topic",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-policy",
          "template": ">context.metaData.handlebars.queries.policies_policy-topic",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "scvo-media",
            "template": ">context.metaData.handlebars.queries.pages_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.policies_topic-head-tags",
              "body": ">context.metaData.handlebars.templates.policies_topic",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}