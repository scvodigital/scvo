{
  "name": "update-account-details",
  "pattern": "/update-account-details",
  "debug": true,
  "errorRoute": "five_hundred",
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfo",
    {
      "name": "saveUserData",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.account_auth_user-body-update",
        "apexClassPath": "/SaltireUser/"
      }
    },
    "context.metaData.commonTasks.flushCache",
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": "/account",
        "statusCode": 302
      }
    }
  ]
}