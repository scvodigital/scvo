{
  "name": "delete-user",
  "debug": true,
  "pattern": "/delete-user",
  "errorRoute": "five_hundred",
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfo",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireUser/?user_id={{@root.data.auth.uid}}"
      }
    },
    {
      "name": "deleteAccountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "DELETE",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "deleteFirebaseStuff",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/",
        "setOrUpdate": "set",
        "dataTemplate": "{}"
      }
    },
    "context.metaData.commonTasks.flushCache",
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": "{\"id\": \"{{{@root.data.deleteAccountInfo}}}\" }",
        "output": "body",
        "parseJson": true
      }
    }
  ]
}
