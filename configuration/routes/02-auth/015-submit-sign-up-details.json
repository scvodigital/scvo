{
  "name": "submit-sign-up-details",
  "pattern": "/submit-sign-up-details",
  "debug": true,
  "errorRoute": "five_hundred",
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "codeRequired",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.account_auth_approval-code-required"
      }
    },
    {
      "name": "saveUserData",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.account_auth_user-body-submit",
        "apexClassPath": "/SaltireUser/"
      }
    },
    "context.metaData.commonTasks.flushCache",
    {
      "name": "welcomeOrApproval",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "==": [
              {
                "var": "data.codeRequired"
              },
              "true"
            ]
          },
          "approval-email-send",
          "welcome-email-send"
        ]
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": "/",
        "statusCode": 302
      }
    }
  ]
}