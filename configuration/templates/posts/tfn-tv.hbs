  }
  .owl-slide-text .story-summary {
    font-size: 3.8vh;
    line-height: 1.3;
    margin-bottom: 8vh;
  }
  .owl-slide-text .story-date {
    font-size: 3.8vh;
    margin-top: 2vh;
    line-height: 1.3;
    opacity: .6 !important;
  }

  @media screen and (max-width: 575px) {
    .owl-carousel .owl-nav {
      top: 5%;
    }

    .owl-carousel .owl-nav svg {
      width: 24px;
      height: 24px;
    }
  }
