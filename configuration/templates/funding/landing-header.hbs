{{#if @root.data.primaryResponse.hits.hits.[0] ~}}
<div class="container">
  <div class="hero">
    <div class="hero-body">
      <div class="columns">
        <div class="column col-7 col-lg-6 col-md-12 hero-text">
          {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
          <h1 class="text-secondary">{{{title}}}</h1>
          {{/with ~}}
        </div>
        <div class="column col-5 col-lg-6 col-md-12 hero-illustration">
          <img src="{{~>asset_url url='images/headers/montage_fourperson.png'~}}" alt="Illustration of a group of people" class="img-responsive" />
        </div>
      </div>
    </div>
  </div>
</div>
{{/if ~}}
