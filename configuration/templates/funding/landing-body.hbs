<div class="bg-white">
  <div class="container v-padding-full b-margin-full">
    {{#*inline "childMenu" ~}}
    {{#ifAll path (ifAny description icon) ~}}
    {{#unless menu_hidden}}
    <div class="column col-6 col-xl-12">
      <div class="card b-padding-full">
        {{#ifAny label label_full ~}}
        <div class="card-heading">
          <h2 class="card-title">
            <a href="{{path}}">{{#if icon}}<span class="fal fa-fw fa-{{icon}} fa-2x">&nbsp;</span>{{/if}}{{#if label_full}}{{{label_full}}}{{else}}{{{label}}}{{/if}}</a>
          </h2>
        </div>
        {{/ifAny ~}}
        {{#if description ~}}
        <div class="card-body">{{{description}}}</div>
        {{/if ~}}
        <div class="card-footer">
          <a href="{{path}}">Find out more</a>
        </div>
      </div>
    </div>
    {{/unless}}
    {{/ifAll ~}}
    {{/inline ~}}

    <div class="t-padding-full">
      <div class="scvo-cms scvo-cms-page scvo-cms-page-{{wpid}}">
        <div class="linked-cards support support-organisation">
          {{#each @root.context.metaData.sidebarMenus ~}}
            {{#each this ~}}
              {{#if children ~}}
                {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                  <div class="columns">
                    {{#each this.children ~}}
                    {{> childMenu this level=2}}
                    {{/each ~}}
                  </div>
                {{else}}
                  {{#each children ~}}
                    {{#if children ~}}
                      {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                        <div class="columns">
                          {{#each this.children ~}}
                          {{> childMenu this level=3}}
                          {{/each ~}}
                        </div>
                      {{else}}
                        {{#each children ~}}
                          {{#if children ~}}
                            {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                              <div class="columns">
                                {{#each this.children ~}}
                                {{> childMenu this level=4}}
                                {{/each ~}}
                              </div>
                            {{else}}
                              {{#each children ~}}
                                {{#if children ~}}
                                  {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                                    <div class="columns">
                                      {{#each this.children ~}}
                                      {{> childMenu this level=5}}
                                      {{/each ~}}
                                    </div>
                                  {{else}}
                                  {{#each children ~}}
                                    {{#if children ~}}
                                      {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                                        <div class="columns">
                                          {{#each this.children ~}}
                                          {{> childMenu this level=6}}
                                          {{/each ~}}
                                        </div>
                                      {{else}}
                                        {{#each children ~}}
                                          {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                                          <div class="columns">
                                            {{#each ../this.children ~}}
                                            {{> childMenu this level=6}}
                                            {{/each ~}}
                                          </div>
                                          {{/ifAll ~}}
                                        {{/each ~}}
                                      {{/ifAll ~}}
                                    {{else}}
                                      {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                                        <div class="columns">
                                          {{#each ../this.children ~}}
                                          {{> childMenu this level=5}}
                                          {{/each ~}}
                                        </div>
                                      {{/ifAll ~}}
                                    {{/if ~}}
                                  {{/each ~}}
                                  {{/ifAll ~}}
                                {{else}}
                                  {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                                    <div class="columns">
                                      {{#each ../this.children ~}}
                                      {{> childMenu this level=4}}
                                      {{/each ~}}
                                    </div>
                                  {{/ifAll ~}}
                                {{/if ~}}
                              {{/each ~}}
                            {{/ifAll ~}}
                          {{else}}
                            {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                              <div class="columns">
                                {{#each ../this.children ~}}
                                {{> childMenu this level=3}}
                                {{/each ~}}
                              </div>
                            {{/ifAll ~}}
                          {{/if ~}}
                        {{/each ~}}
                      {{/ifAll ~}}
                    {{else}}
                      {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                      <div class="columns">
                        {{#each ../this.children ~}}
                        {{> childMenu this level=2}}
                        {{/each ~}}
                      </div>
                      {{/ifAll ~}}
                    {{/if ~}}
                  {{/each ~}}
                {{/ifAll ~}}
              {{else}}
                {{#ifAll route (regexMatch @root.request.url.pathname route "gi") ~}}
                {{/ifAll ~}}
              {{/if ~}}
            {{/each ~}}
          {{/each ~}}
        </div>
      </div>
    </div>

    <h2>
      Funds SCVO manages
    </h2>
    <p>
      We believe in being fully transparent when it comes to the funding opportunities we create/are part of - and we love celebrating the success stories of those who benefit! For details of the funds available right now, and information and evaluation of previously funded projects, see the following pages:
    </p>
    <div class="columns">
      {{#each @root.data.supplimentaryResponses.scvo_funds.aggregations.funds.buckets ~}}
        {{#compare funds.hits.total ">" 0 ~}}
          <div class="column col-6 col-md-12">
            <h3 class="t-margin-full">
              {{#compare key "open"}}
              Open funds
              {{else}}
              Currently closed funds &amp; successful projects
              {{/compare ~}}
            </h3>
            <ul>
              {{#each funds.hits.hits ~}}
              {{#with _source ~}}
              <li><a href="{{replace (replace (replace fund_url 'https://scvo.org/' '/') 'https://scvo.org.uk/' '/') 'https://scvo.scot/' '/'}}">{{{replace title "SCVO - " ""}}}</a></li>
              {{/with ~}}
              {{/each ~}}
              {{#compare key "currently-closed"}}
              {{!-- these are listed as ceased so don't appear in FS --}}
              <li><a href="/funding/cyber-essentials-fund">Cyber Grants Scheme</a></li>
              <li><a href="/funding/community-capacity-resilience-fund">Community Capacity & Resilience Fund</a></li>
              <li><a href="/funding/carers-act-transformation-support-fund">Carers Act Transformation Support Fund</a></li>
              {{/compare}}
            </ul>
            {{#compare @index 0}}
              <h3 class="t-margin-full">Supported Programmes</h3>
              <ul class="b-margin-full">
                <li><a href="/funding/benefit-take-up-and-income-maximisation-fund">Scottish Benefits Take-Up Fund and Scottish Income Maximisation Fund</a></li>
              </ul>
            {{/compare}}
          </div>
        {{/compare ~}}
      {{/each ~}}
    </div>
    {{!-- <p>
      All our grants data are published openly via the <a href="http://www.threesixtygiving.org/support/standard/">360Giving Standard</a>.
    </p> --}}
  </div>
</div>