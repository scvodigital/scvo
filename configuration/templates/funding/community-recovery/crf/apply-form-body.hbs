<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function() {
  var $form = $('#4910789'),
  $postcode = $('#tfa_1925'),
  $postcodeIcon = $('#postcode_validation_icon'),
  $postcodeWrapper = $('#postcode-wrapper'),
  $postcodeValidationMessage = $('#postcode_validation_message'),
  $organisationType = $('#tfa_1944'),
  $organisationTypeOther = $('#org_type_other'),
  $organisationTypeOtherBlock = $('#org_type_other-D'),
  $initialRecoveryStatus = $('#tfa_2689'),
  $initialRecoveryType = $('#tfa_2692'),
  $initialCommunityStatus = $('#tfa_2690'),
  $initialCommunityType = $('#tfa_2693');

  $organisationTypeOther.blur(function(e) {
    var organisation_type_other = $organisationTypeOther.val();
    if (organisation_type_other) {
      $organisationType.append('<option value="'+organisation_type_other+'">'+organisation_type_other+'</option>');
      $organisationType.val(organisation_type_other);
      $organisationTypeOtherBlock.addClass('offstate');
    }
  });

  function checkPostcode() {
    var postcode = $('#tfa_1925').val().toUpperCase();
    if (postcode.match(/[a-z]{1,2}[0-9]{1,2}[a-z]?\s?[0-9][a-z]{2}/ig)) {
      $postcodeIcon
      .addClass("loading text-primary")
      .removeClass("fa-times fa-check text-error text-success");
      $.ajax({
        url: '/postcode-lookup?q=' + postcode,
        success: function(data) {
          if (Array.isArray(data) && data.length > 0) {
            setLocationData(data);
          } else {
            clearLocationData();
          }
        }
      })
    } else {
      clearLocationData();
    }
  }

  function setLocationData(data) {
    console.log(data);
    $('#tfa_1925').val(data[0].place);
    $('#tfa_1936').val(data[0].constituency);
    $('#tfa_1934').val(data[0].ward);
    $('#tfa_1953').val(data[0].simd_datazone);
    $('#tfa_1955').val(data[0].simd_rank);
    $('#postcode_validation_message').html('');
    $('#postcode-wrapper').removeClass("has-error")
    $('#postcode_validation_icon')
    .addClass("fa-check text-success")
    .removeClass("loading fa-times text-primary text-error");
  }

  function clearLocationData() {
    $postcodeWrapper.addClass('has-error');
    $postcodeValidationMessage.html('');
    $postcodeIcon
    .addClass("fa-times text-error")
    .removeClass("loading fa-check text-primary text-success");
    $('#tfa_1936').val('');
    $('#tfa_1934').val('');
    $('#tfa_1953').val('');
    $('#tfa_1955').val('');
  }

  $postcode.on('keyup', checkPostcode);

  $('input[type=radio][name=tfa_2398]').change(function() {
    $('#tfa_2505').val('');
    $('#tfa_1884').val('');
    {{#each local_authorities ~}}
    {{#if id_multiple ~}}
    $('#{{id_multiple}}').prop('checked', false);
    {{/if ~}}
    {{/each ~}}
  });

  {{#unless defaults.application_editing}}
  var cleave_sort_code = new Cleave('#tfa_2273', {
    delimiter: '-',
    blocks: [2,2,2],
    numericOnly: true,
    delimiterLazyShow: true
  });
  var cleave_account_number = new Cleave('#tfa_2274', {
    blocks: [8],
    numericOnly: true
  });
  {{/unless}}


  var fileFields = $('input[type="file"]');
  fileFields.on('change', function(event){
    validateFileSize(event.currentTarget);
  });

  function validateFileSize(target) {
    var total = 0;
    fileFields.each(function(i, fileField) {
      if (fileField.files && fileField.files[0]) {
        total += fileField.files[0].size;
      }
    });

    var megs = total / 1024 / 1024;
    if (megs > 20 && target) {
      alert('The combined filesize upload limit is 20MB. The file you are trying to attach exceeds this limit, please choose a smaller file.');
      $(target).val('');

      total -= target.files[0].size;
    }

    var megsWithDecimal = Math.round(((total / 1024 / 1024) + Number.EPSILON) * 100) / 100;
    $('#file-upload-limit-total').html('' + megsWithDecimal);
    $('#file-upload-limit-progress').attr('value', ''+total);
    if (total > 0) {
      $('#upload-info').show();
    } else {
      $('#upload-info').hide();
    }
  }

  validateFileSize();
});

function isNumberKey(evt){
  var charCode = (evt.which) ? evt.which : evt.keyCode
  return !(charCode > 31 && (charCode < 48 || charCode > 57));
}

