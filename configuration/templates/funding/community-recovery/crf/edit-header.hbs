<div class="container">
  {{#with @root.data.form_data}}
  <h1 class="font-default">{{#if defaults.application_fund}}{{#compare defaults.application_fund "Communities Recovery Fund"}}{{defaults.application_fund}}{{else}}{{{replace (replace defaults.application_fund "Recovery Fund" "Adapt &amp; Thrive") "Supporting Communities Fund" "Communities Recovery Fund"}}} application{{/compare}}{{/if}}</h1>

  {{#if defaults.application_editing_instructions}}
  <div class="t-margin-full label label-primary h-padding-full">
    <h4>Editing instructions:</h4>
    <p class="b-padding text-white">
      {{{regexReplace defaults.application_editing_instructions '\r?\n' 'g' '<br />'}}}
    </p>
  </div>
  {{/if}}
  {{/with}}
</div>