    "fromOpenCall": "Yes",
    "dateModified": "{{momentFormat (moment date_last_modified 'x') "YYYY-MM-DDTHH:mm:ssZ"}}",
    "dataSource": "https://scvo.org/digital/evolution/cyber-resilience/projects/data.json"
  }{{#unless @last}},{{/unless}}
  {{/ifAny ~}}
  {{/with}}
  {{/each}}
  ]
