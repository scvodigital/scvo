    transition-delay: 0.5s;
  } */
  .fa-ul {
    margin-left: 3rem;
  }
  </style>
  <script>
  window.console = window.console || function(t) {};
  </script>
  <script>
  if (document.location.search.match(/type=embed/gi)) {
    window.parent.postMessage("resize", "*");
  }
  </script>
</head>
<body translate="no">
  <div class="scvo-brand">
    <img src="{{~>asset_url url='images/logos/scvo-white.svg'}}" />
    <h2>New members &amp; supporters</h2>
  </div>
  <div class="slider center slick-slider">
    {{#compare @root.data.primaryResponse.hits.total ">" 0 ~}}
    {{#each @root.data.primaryResponse.hits.hits ~}}
    {{#with _source ~}}
    <div class="content">
      {{#if og_image ~}}
      {{!-- <img src="{{og_image}}" class="top" /> --}}
      {{/if ~}}
      <h1 class="slide-animated slide-title">{{{trim title}}}</h1>
      <div class="slide-animated slide-subtitle">
        {{#if charity_number ~}}
        <p><strong>Registered charity {{{trim charity_number}}}</strong></p>
        {{/if ~}}
        {{#if description ~}}
        <p>{{{truncate (trim description) 280}}}</p>
        {{/if ~}}
        {{#if website ~}}
        <p><u>{{replace (replace (replace (trim website) 'https://' '') 'http://' '') 'www.' ''}}</u></p>
        {{/if ~}}
        {{#if twitter ~}}
        <ul class="fa-ul">
          <li><span class="fa-li"><span class="fab fa-twitter"></span></span> @{{replace (replace (replace (replace (replace (replace (replace (trim twitter) 'https://' '') 'http://' '') 'm.twitter.com/' '') 'mobile.twitter.com/' '') 'twitter.com/' '') '?lang=en' '')}}</li>
        </ul>
        {{/if ~}}
        {{!-- {{#if facebook ~}}
        <p><u>{{trim facebook}}</u></p>
        {{/if ~}} --}}
      </div>
      {{#if date_membership ~}}
      <div class="slide-animated slide-date">
        <p>
          <strong>
            Joined SCVO {{replace (momentFromNow date_membership) 'a day ago' 'yesterday'}}
            {{#if type}}as a {{{lowercase type}}}{{/if}}
          </strong>
        </p>
      </div>
      {{/if ~}}
    </div>
    {{/with ~}}
    {{/each ~}}
    {{/compare ~}}
  </div>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
  <script type="text/javascript" src="{{~>asset_url url='libraries/slick/slick.min.js'}}"></script>
  <script>
  $(document).ready(function(){
    $('.center').slick({
      autoplay: true,
      autoplaySpeed: 6000,
      centerMode: true,
      slidesToShow: 3,
      // adaptiveHeight: true,
      centerPadding: '60px',
      dots: false,
      infinite: true,
      arrows: false,
      speed: 500,
      cssEase: 'linear'
    });
    // $(".slick-slider").on("slick-initialized", () => {
    //   setTimeout(() => {
    //     $(".slick-active .slide-animated").addClass("is-transitioned");
    //   }, 200);
    // });
  });
  </script>
</body>
</html>