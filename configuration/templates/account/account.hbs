          __doNotCompile: true,
          type: "switch",
          config: {
            which: { __template: "\{{#if errors.changePassword}}error\{{/if}}" },
            branches: {
              default: {
                tasks: [
                  {
                    type: "run",
                    config: { code: "window.location.href = '/account'" }
                  }
                ]
              },
              error: {
                tasks: [
                  {
                    type: "elementManipulator",
