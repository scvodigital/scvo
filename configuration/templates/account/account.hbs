          <div id="re-authenticate-alert" class="alert hidden bg-error s-rounded x-padding v-margin">
            <span class="alert-message"></span>
          </div>

          <div class="social">
            {{#if (contains (map @root.data.auth.providerData (getProp "providerId")) "google.com")}}
