<div class="event">
  <div class="container-fluid">
    {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li><a href="/events">Events</a></li>
      <li>{{{title}}}</li>
    </ul>
    {{/with ~}}
  </div>
  <div class="splash-image splash-image-scvo-cms-page" style="background-image: url('https://storage.googleapis.com/scvo-cms/29468/website-funding-header.jpg');">
    <div class="splash-overlay splash-overlay-hidden">
      <div class="container-fluid">
        <div class="mdc-layout-grid">
          <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
              <img src="https://storage.googleapis.com/scvo-cms/wp-content/uploads/2019/05/FTF-logo-rgb-2.jpg" alt="Funding the future" class="header-text">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid page-content">
    {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
    <div class="full scvo-event scvo-event-{{Id}}{{#if (contains other_information "brand-")}} scvo-event-{{other_information}}{{/if}} mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone content event-content">
          <dl class="inline-dl">
            <dt>Details</dt>
            <dd>
              <div class="mdc-layout-grid">
                {{#if date_start ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Starts</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{momentFormat (momentConvertTz (moment date_start "x") "UTC" "Europe/London") 'Do MMMM YYYY HH:mm'}}
                  </div>
                </div>
                {{/if ~}}
                {{#if date_end ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Ends</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{momentFormat (momentConvertTz (moment date_end "x") "UTC" "Europe/London") 'Do MMMM YYYY HH:mm'}}
                  </div>
                </div>
                {{/if ~}}
                {{#if trainer ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Trainer</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{{trainer}}}
                  </div>
                </div>
                {{/if ~}}
                {{#if contact_name ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Contact</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{#if contact_email ~}}
                    <span class="far fa-envelope fa-fw"></span> <a href="mailto:{{contact_email}}">{{{striptags contact_name}}}</a>
                    {{else}}
                    {{{striptags contact_name}}}
                    {{/if ~}}
                    {{#if contact_phone ~}}<br />
                    <span class="fas fa-phone fa-flip-horizontal fa-fw"></span> {{contact_phone}}{{/if ~}}
                  </div>
                </div>
                {{/if ~}}
                {{#if costs ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Cost</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{{costs}}}
                  </div>
                </div>
                {{else}}
                {{#if cost_structures ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Cost</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    {{#forEach cost_structures ~}}
                    {{{Description__c}}} &pound;{{Total_Amount__c}}{{#unless isLast}}, {{/unless}}
                    {{/forEach ~}}
                  </div>
                </div>
                {{else}}
                {{#if rate ~}}
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
                    <strong>Cost</strong>
                  </div>
                  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
                    &pound;{{rate}}
                  </div>
                </div>
                {{/if ~}}
                {{/if ~}}
                {{/if ~}}
              </div>
            </dd>
            {{#if course_overview ~}}
            <dt>
              {{#compare course_type "===" "Training Course" ~}}
              Course overview
              {{else}}
              Overview
              {{/compare ~}}
            </dt>
            <dd>
              {{{course_overview}}}
            </dd>
            {{/if ~}}
            {{#if aims ~}}
            <dt>
              {{#compare course_type "===" "Training Course" ~}}
              Overall course aim
              {{else}}
              Overall aim
              {{/compare ~}}
            </dt>
            <dd>
              {{{aims}}}
            </dd>
            {{/if ~}}
            {{#if description ~}}
            <dt>
              {{#compare course_type "===" "Training Course" ~}}
              Course objectives
              {{else}}
              Description
              {{/compare ~}}
            </dt>
            <dd>
              {{{description}}}
            </dd>
            {{/if ~}}
            {{#if aimed_at ~}}
            <dt>
              {{#compare course_type "===" "Training Course" ~}}
              Who is the course aimed at?
              {{else}}
              Who is this event aimed at?
              {{/compare ~}}
            </dt>
            <dd>
              {{{aimed_at}}}
            </dd>
            {{/if ~}}
            {{#if entry_requirements ~}}
            <dt>
              Entry requirements
            </dt>
            <dd>
              {{{entry_requirements}}}
            </dd>
            {{/if ~}}
            {{#if other_information ~}}
            <dt>
              Other information
            </dt>
            <dd>
              {{{other_information}}}
            </dd>
            {{/if ~}}
          </dl>
          {{#if places_available ~}}
          {{#compare places_available ">" 0 ~}}
          {{#compare places_available "<" 5 ~}}
          <p class="booking course-almost-full">
            <strong>Note:</strong> Only a few places left!
          </p>
          {{/compare ~}}
          <p class="book-now">
            <a href="{{#if booking_url}}{{#if (contains booking_url "https://www.surveygizmo.eu")}}{{url}}/book{{else}}{{{booking_url}}}{{/if}}{{else}}{{url}}/book{{/if}}" class="mdc-button mdc-button--raised">Book now</a>
          </p>
          {{else}}
          <p class="booking course-full">
            <strong>Please note this {{#compare course_type "===" "Training Course"}}course{{else}}event{{/compare}} is now fully booked!</strong>
          </p>
          {{/compare ~}}
          {{else}}
          <p class="booking course-full">
            <strong>Please note this {{#compare course_type "===" "Training Course"}}course{{else}}event{{/compare}} is now fully booked!</strong>
          </p>
          {{/if ~}}
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone sidebar event-sidebar">
          <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
              <strong>Venue</strong>
            </div>
            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
              {{#if event_venue.postcode ~}}
              {{#if event_venue.name ~}}{{event_venue.name}}<br />{{/if ~}}
              {{#if event_venue.organisation_name ~}}{{event_venue.organisation_name}}<br />{{/if ~}}
              {{#if event_venue.address_1 ~}}{{event_venue.address_1}}<br />{{/if ~}}
              {{#if event_venue.address_2 ~}}{{event_venue.address_2}}<br />{{/if ~}}
              {{#if rendered.city ~}}{{#compare rendered.city "!==" event_venue.address_2 ~}}{{rendered.city}}<br />{{/compare ~}}{{/if ~}}
              {{#if event_venue.postcode ~}}{{event_venue.postcode}}{{/if ~}}
              {{#if event_venue.accessible ~}}
              <br /><span class="fab fa-accessible-icon" aria-hidden="true"></span> Wheelchair accessible
              {{/if ~}}
              {{else}}
              {{#if venue_alt ~}}
              {{{venue_alt}}}
              {{else}}
              TBC
              {{#if rendered.city ~}}({{rendered.city}}){{else}}{{#if event_venue.address_2 ~}}({{event_venue.address_2}}){{/if ~}}{{/if ~}}
              {{/if ~}}
              {{/if ~}}
            </div>
            {{#ifAll event_venue.address_1 event_venue.postcode geo.latitude geo.longitude ~}}
            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
              <a href="https://maps.google.co.uk/?q={{urlencode event_venue.address_1}},%20{{urlencode event_venue.postcode}}">
                <img src="http://maps.googleapis.com/maps/api/staticmap?center={{geo.latitude}},{{geo.longitude}}&zoom=14&size=420x320&maptype=roadmap&markers={{geo.latitude}},{{geo.longitude}}&key=AIzaSyDSixdiuQklJxhvx0_gsv4xYnjLXTb3G4I" />
              </a>
            </div>
            {{/ifAll ~}}
          </div>
        </div>
      </div>
    </div>

    {{{rendered.scvo_speakers}}}
    {{/with ~}}
    {{> same_events}}
    {{> related_events}}
  </div>
</div>
