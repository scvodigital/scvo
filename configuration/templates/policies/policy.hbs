<div class="page">
  <div class="container-fluid">
    <ul class="breadcrumbs" aria-hidden="true">
      <li><a href="/">Home</a></li>
      <li><a href="/policy-research">Policy &amp; research</a></li>
      <li><a href="/policy-research/policies">Policies</a></li>
      <li>
        {{{@root.data.primaryResponse.hits.hits.[0]._source.title}}}
      </li>
    </ul>
  </div>
  <div class="splash-image splash-image-{{@root.data.primaryResponse.hits.hits.[0]._type}}-category" style="{{> headers_splash_image}}">
    <div class="splash-overlay">
      <div class="container-fluid">
        <div class="mdc-layout-grid">
          <h1 class="header-text">
            <span class="header-text-banner">
              {{{@root.data.primaryResponse.hits.hits.[0]._source.title}}}
            </span>
          </h1>
        </div>
        {{> headers_caption}}
      </div>
    </div>
  </div>
  <div class="container-fluid content page-content">
    <div class="mdc-layout-grid t-margin-full">
      <div class="mdc-layout-grid__inner">
        {{#each @root.data.primaryResponse.hits.hits ~}}
        {{#with _source ~}}
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone">
          <p class="mdc-typography--body1">{{{statement}}}</p>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
          <p class="mdc-typography--body1">
            {{#if briefing}}<a href="{{briefing}}">Briefing</a><br />{{/if}}
            {{#if press_release}}<a href="{{press_release}}">Press release</a><br />{{/if}}
            {{#if additional}}<a href="{{additional}}" download>Download</a>{{/if}}
          </p>
        </div>
        {{/with ~}}
        {{/each ~}}
      </div>
    </div>
  </div>
</div>