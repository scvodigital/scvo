<div class="bg-secondary useful-content">
  <div class="container t-padding-full">
    <div class="columns linked-cards t-margin-full">
      {{#compare @root.data.supplimentaryResponses.tfn_latest.hits.total ">" 0 ~}}
      <div class="column col-4 col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title h3">
              Latest news on TFN
              <a href="http://thirdforcenews.org.uk/?utm_source=Widget&utm_medium=Widget&utm_campaign=Widget-Traffic" class="caption l-margin">See more</a>
            </div>
          </div>
          {{#with @root.data.supplimentaryResponses.tfn_latest.hits.hits.[0]._source ~}}
          <a href="{{trim url}}?utm_source=Widget&utm_medium=Widget&utm_campaign=Widget-Traffic">
            <div class="card-image-link">
              <div class="card-image-wrapper">
                <div class="card-image" style="--aspect-ratio: 3/2;">
                  <img src="{{replace image_wide '__wide' ''}}" alt="{{trim title}}" class="img-responsive" />
                </div>
              </div>
              <div class="card-header">
                <h4 class="card-title">{{{trim title}}}</h4>
              </div>
              <div class="card-body">
                <p>
                  {{{truncate description 280}}}
                </p>
              </div>
            </div>
          </a>
          <div class="card-footer">
            <a href="{{trim url}}?utm_source=Widget&utm_medium=Widget&utm_campaign=Widget-Traffic" class="no-underline">Read more</a>
          </div>
          {{/with ~}}
        </div>
      </div>
      {{/compare ~}}
      <div class="column col-4 col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title h3">
              Featured campaign
              <a href="/policy/campaigns" class="caption l-margin">See more</a>
            </div>
            {{> promoted_eu_are_valued}}
          </div>
        </div>
      </div>
      <div class="column col-4 col-md-12">
        <div class="h3" style="padding-bottom: 0.8rem;">
          What can we help you with?
        </div>
        {{> site_search_form id='home'}}

        {{> useful_links}}
      </div>
    </div>
  </div>
</div>

