<div class="page about">
  <div class="container-fluid">
    {{> breadcrumbs}}
  </div>
  {{> headers_splash}}
  <div class="container-fluid">
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content page-content">
          {{{data.primaryResponse.hits.hits.[0]._source.rendered.scvo_full}}}

          {{#compare data.supplimentaryResponses.scvo_jobs.hits.total "===" 0 ~}}
          <p>
            We don't currently have any vacancies but when we do they will appear here automatically.
          </p>
          <p>
            In the meantime you can search for jobs on
            <a href="https://goodmoves.com?utm_source=scvo&utm_campaign=page&utm_medium=website"><strong>good</strong>moves</a> and set up email alerts.
          </p>
          {{else}}
          <h2>Current vacancies with SCVO</h2>
          {{#each @root.data.supplimentaryResponses.scvo_jobs.hits.hits ~}}
          {{> goodmoves_search_result source=_source}}
          {{/each ~}}
          {{/compare ~}}
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar page-sidebar">
          {{> menus_about}}
        </div>
      </div>
    </div>
  </div>
</div>
