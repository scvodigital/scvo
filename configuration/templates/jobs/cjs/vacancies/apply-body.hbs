<h4>Contact Details</h4>
<ul class="fa-ul">
  {{#if supervisor.first_name ~}}
  <li>
    <span class="fa-li"><span class="far fa-user-alt"></span></span>
    {{{supervisor.first_name}}} {{{supervisor.last_name}}}
  </li>
  {{/if ~}}
  {{#if supervisor.email ~}}
  <li>
    <span class="fa-li"><span class="far fa-envelope"></span></span>
    <a href="mailto:{{{supervisor.email}}}">{{{supervisor.email}}}</a>
  </li>
  {{/if ~}}
  {{#if supervisor.phone ~}}
  <li>
    <span class="fa-li"><span class="far fa-phone fa-flip-horizontal"></span></span>
    {{{supervisor.phone}}}
  </li>
  {{/if ~}}
  <li>
    <span class="fa-li"><span class="far fa-building"></span></span>
    {{#if organisation.street}}{{{organisation.street}}}, {{/if}}
    {{#if organisation.area_town}}{{{organisation.area_town}}}, {{/if}}
    {{#if organisation.city_county}}{{{organisation.city_county}}}, {{/if}}
    {{#if organisation.postcode}}{{{organisation.postcode}}}{{/if}}
