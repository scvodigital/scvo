<div class="container v-padding-full b-margin">
  {{{@root.data.primaryResponse.hits.hits.[0]._source.content}}}
</div>

{{> footers_posts_policy_howto}}

<div class="bg-gray">
  <div class="container v-padding-full">
    <h2>Our networks</h2>
    <div class="columns">
      <div class="column col-4 col-lg-6 col-md-12 v-padding-full">
        <div class="card card-no-padding">
          <section class="card-header">
            <div class="card-title h3">
              <a href="/policy/get-involved/intermediaries-network">
                <span class="r-margin far fa-fw fa-retweet"> </span>
                Intermediaries
              </a>
            </div>
          </section>
          <section class="card-body t-margin">
            Details on everything from our intermediaries network to resources and directories for those working in intermediary bodies.
          </section>
          <section class="card-footer t-margin">
            <a href="/policy/get-involved/intermediaries-network">Find out more</a>
          </section>
        </div>
      </div>
      <div class="column col-4 col-lg-6 col-md-12 v-padding-full">
        <div class="card card-no-padding">
          <section class="card-header">
            <div class="card-title h3">
              <a href="/policy/get-involved/policy-network">
                <span class="r-margin far fa-fw fa-landmark"> </span>
                Policy
              </a>
            </div>
          </section>
          <section class="card-body t-margin">
            Details on our policy network.
          </section>
          <section class="card-footer t-margin">
            <a href="/policy/get-involved/policy-network">Find out more</a>
          </section>
        </div>
      </div>
      <div class="column col-4 col-lg-6 col-md-12 v-padding-full">
        <div class="card card-no-padding">
          <section class="card-header">
            <div class="card-title h3">
              <a href="/policy/events">
                <span class="far fa-fw fa-users"></span>
                Events
              </a>
            </h3>
          </section>
          {{#with @root.data.supplimentaryResponses.events_total.hits ~}}
          <section class="card-body t-margin">
            {{#compare total ">" 0 ~}}
            We have {{inflect total "upcoming event" "upcoming events" true}}
            {{else}}
            We don't have any upcoming events
            {{/compare ~}}
          </section>
          {{#compare total ">" 0 ~}}
          <section class="card-footer t-margin">
            <a href="/policy/events">See {{inflect total "event" "events"}}</a>
          </section>
          {{/compare ~}}
          {{/with ~}}
        </div>
      </div>
    </div>
  </div>
</div>
