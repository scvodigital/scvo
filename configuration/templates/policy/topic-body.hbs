<div class="container v-padding-full">
  {{{@root.data.primaryResponse.hits.hits.[0]._source.content}}}
</div>

{{#compare @root.route.name "page_policy-coronavirus"}}
  {{> sections_coronavirus title="Coronavirus research" icon="house-user" description="Research in response to the COVID-19 pandemic" link="/policy/research/coronavirus"}}
{{/compare}}

<div class="bg-gray">
  <div class="container v-padding-full">
    <div class="columns b-padding-full">
      {{#compare @root.data.supplimentaryResponses.latest_briefings.hits.total ">" 0 ~}}
        <div class="column col-4 col-lg-6 col-md-12">
          <h3 class="b-padding">Briefings</h3>

          {{#each @root.data.supplimentaryResponses.latest_briefings.hits.hits ~}}
            {{#compare @index "<" 3}}
              {{> content_post_gist _source}}
            {{/compare}}
          {{/each ~}}

          <div class="card-footer">
            <a href="{{@root.request.url.pathname}}/briefings">More briefings</a>
          </div>
        </div>
      {{/compare}}
      {{#compare @root.data.supplimentaryResponses.latest_consultation_responses.hits.total ">" 0 ~}}
        <div class="column col-4 col-lg-6 col-md-12">
          <h3 class="b-padding">Consultation responses</h3>

          {{#each @root.data.supplimentaryResponses.latest_consultation_responses.hits.hits ~}}
            {{#compare @index "<" 3}}
              {{> content_post_gist _source}}
            {{/compare}}
          {{/each ~}}

          <div class="card-footer">
            <a href="{{@root.request.url.pathname}}/consultation-responses">More consultation responses</a>
          </div>
        </div>
      {{/compare}}
      {{#compare @root.data.supplimentaryResponses.latest_research.hits.total ">" 0 ~}}
        <div class="column col-4 col-lg-6 col-md-12 no-border">
          <h3 class="b-padding">Research</h3>

          {{#each @root.data.supplimentaryResponses.latest_research.hits.hits ~}}
            {{#compare @index "<" 3}}
              {{> content_post_gist _source}}
            {{/compare}}
          {{/each ~}}

          <div class="card-footer">
            <a href="{{@root.request.url.pathname}}/research">More research</a>
          </div>
        </div>
      {{/compare}}
    </div>
  </div>
</div>