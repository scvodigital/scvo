<div class="container">
  <ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/policy">Policy & research</a></li>
    <li class="breadcrumb-item"><a href="/policy/organisations">Organisations</a></li>
    {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
    <li class="breadcrumb-item">
      {{#if title}}{{{title}}}{{else}}{{Id}}{{/if}}
    </li>
    {{/with ~}}
  </ul>

  {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
  <h1>
    {{#if title}}{{{title}}}{{else}}{{Id}}{{/if}}
    {{#ifAny alias @root.data.organisation.hits.hits.0._source.alias ~}}
    {{#compare title "!==" (default alias @root.data.organisation.hits.hits.0._source.alias) ~}}
    ({{{default alias @root.data.organisation.hits.hits.0._source.alias}}})
    {{/compare ~}}
    {{/ifAny ~}}
  </h1>
  {{/with ~}}
</div>