      <div class="column col-4 col-lg-6 col-md-12 no-border">
        <h3 class="b-padding">Research</h3>

        {{#if @root.data.supplimentaryResponses.latest_research.hits.hits ~}}
        {{> content_post_gist @root.data.supplimentaryResponses.latest_research.hits.hits.[0]._source}}
