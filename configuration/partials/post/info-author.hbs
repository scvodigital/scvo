{{#unless is_press_release ~}}
<div class="post-info-item post-info-author">
  <a href="/post/author/{{author_slug}}" title="Read more by {{author_name_full}}" class="avatar avatar-sm">
    <img src="{{default og_image author_avatar}}" alt="{{author_name_full}}" class="photo-wee scvo-{{#if staff_profile}}staff{{else}}cms-author{{/if}}-photo-wee" />
  </a>
  <a href="/post/author/{{author_slug}}" title="Read more by {{author_name_full}}" class="author">{{{author_name_full}}}</a>
</div>
{{/unless ~}}