<li class="card list expanded scvo-cms scvo-cms-post scvo-cms-post-{{wpid}} supplimentary-list-item">
  <section class="card-header">
    <div class="card-title">
      <a href="{{path}}">{{{title}}}</a>
    </div>
  </section>
  <section class="card-body">
    <div class="post-info">
      {{> post_info_author}}
      {{> post_info_published}}
    </div>
    <div class="post-info">
      {{> post_info_categories}}
    </div>
    {{#if description_truncated ~}}
    <div class="supplimentary-list-text">
      {{{truncate description_truncated 280}}}
      <a href="{{path}}">Read more</a>
    </div>
    {{/if ~}}
  </section>
</li>