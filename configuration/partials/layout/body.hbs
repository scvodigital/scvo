{{#ifAny layoutParts.leftSidebar layoutParts.rightSidebar ~}}
<div class="sidebar-present{{#compare layoutParts.style 'fullWidth'}} bg-white{{/compare}}">
  {{{layoutParts.header}}}
  <div class="page-body">
    <div class="{{#unless (compare layoutParts.style 'fullWidth')}}container{{/unless}}">
      <div class="columns">
        {{#ifAll layoutParts.leftSidebar layoutParts.rightSidebar ~}}
        <aside class="sidebar sidebar-left column col-3 col-xl-4 col-lg-12">
          {{{layoutParts.leftSidebar}}}
        </aside>
        <main class="body column col-xs-auto">
          {{{layoutParts.body}}}
        </main>
        <aside class="sidebar sidebar-right column col-3 col-xl-4 col-lg-12">
          {{{layoutParts.rightSidebar}}}
        </aside>
        {{else}}
        {{#if layoutParts.leftSidebar ~}}
        <aside class="sidebar sidebar-left column col-3 col-xl-4 col-lg-12">
          {{{layoutParts.leftSidebar}}}
        </aside>
        <main class="body column col-xs-auto">
          {{{layoutParts.body}}}
        </main>
        {{else}}
        <main class="body column col-xs-auto">
          {{{layoutParts.body}}}
        </main>
        <aside class="sidebar sidebar-right column col-3 col-xl-4 col-lg-12">
          {{{layoutParts.rightSidebar}}}
        </aside>
        {{/if ~}}
        {{/ifAll ~}}
      </div>
    </div>
  </div>
  {{{layoutParts.footer}}}
</div>
{{else}}
<div class="sidebar-not-present">
  {{{layoutParts.header}}}
  <main class="{{#unless (compare layoutParts.style 'fullWidth')}}container {{/unless}}body">
    {{{layoutParts.body}}}
  </main>
  {{{layoutParts.footer}}}
</div>
{{/ifAny ~}}
