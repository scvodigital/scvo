<div class="splash-image splash-image-{{default typeOverride @root.data.primaryResponse.hits.hits.[0]._type}}" style="{{> headers_splash_image}}">
  <div class="splash-overlay{{#if @root.data.primaryResponse.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
    <div class="container-fluid">
      <div class="mdc-layout-grid">
        {{#if headerTextOverride ~}}
        <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
            <h1 class="header-text">
              <span class="header-text-banner">
                {{{headerTextOverride}}}
                {{#if headerTextCaptionOverride ~}}
                <span class="mdc-typography--caption">
                  {{{headerTextCaptionOverride}}}
                </span>
                {{/if ~}}
              </span>
            </h1>
          </div>
        </div>
        {{else}}
        {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
        {{#if header_text ~}}
        {{#if sub_title ~}}
        <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone">
            <img src="{{header_text}}" alt="{{title}}" class="header-text" />
          </div>
          <div class="mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone" style="display:flex;align-items:center;">
            <h1 class="header-text">
              <span class="header-text-banner">
                {{{sub_title}}}
              </span>
            </h1>
          </div>
        </div>
        {{else}}
        <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
            <img src="{{header_text}}" alt="{{title}}" class="header-text" />
          </div>
        </div>
        {{/if ~}}
        {{else}}
        <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
            <h1 class="header-text">
              <span class="header-text-banner">
                {{#if title ~}}
                {{#unless hide_overlay ~}}
                {{{title}}}
                {{#if sub_title ~}}
                <span class="mdc-typography--caption">
                  {{{sub_title}}}
                </span>
                {{/if ~}}
                {{/unless ~}}
                {{else}}
                404: Not found
                {{/if ~}}
              </span>
            </h1>
          </div>
        </div>
        {{/if ~}}
        {{/with ~}}
        {{/if ~}}
      </div>
      {{#unless @root.data.primaryResponse.hits.hits.[0]._source.header_background ~}}
      {{> headers_caption}}
      {{/unless ~}}
    </div>
  </div>
</div>