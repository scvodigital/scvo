{{#compare @root.data.supplimentaryResponses.tfn_related_posts.hits.total ">" 0 ~}}
<div class="related-posts v-padding-full bg-tfn">
  <div class="container v-padding-full b-margin">
    <h3 class="no-margin">
      Related TFN news&ensp;
      <a href="http://thirdforcenews.org.uk/?utm_source=Widget&utm_medium=Widget&utm_campaign=Widget-Traffic" class="caption">See more</a>
    </h3>
    <div class="columns">
      {{#each (split "0,1,2" ",") ~}}
      {{#with (getProperty @root.data.supplimentaryResponses.tfn_related_posts.hits.hits (concat this '._source')) ~}}
      <div class="column col-4 col-lg-6 col-sm-12">
        {{> content_featured name="latest-tfn" link=(trim url) heading="h4" title=(trim title) body=(momentFormat (moment date_published 'x') "Do MMMM YYYY") ratio="16:9" image=(replace image_wide '__wide' '')}}
      </div>
      {{/with ~}}
      {{/each ~}}
    </div>
  </div>
</div>
{{/compare ~}}
