<script type="application/ld+json" data-dynamic="true">
{
  "@context": "http://schema.org",
  "@type": "Article",
  "headline": "{{title}}",
  "image": "https://storage.googleapis.com/scvo-assets/scvo/scvo-logo.png",
  "author": "{{author_name_full}}",
  "editor": "Ann Rowe",
  "genre": "News",
  {{#if post_tags ~}}
  "keywords": "{{join post_tags ", "}}",
  {{/if ~}}
  "publisher": {
    "@type": "Organization",
    "name": "Scottish Council for Voluntary Organisations",
    "logo": {
      "@type": "ImageObject",
      "url": "https://storage.googleapis.com/scvo-assets/scvo/scvo-logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{url}}"
  },
  "datePublished": "{{momentFormat (moment publish_on 'x') 'YYYY-MM-DDTHH:mm:ssZ'}}",
  "dateCreated": "{{momentFormat (moment publish_on 'x') 'YYYY-MM-DDTHH:mm:ssZ'}}",
  "dateModified": "{{momentFormat (moment date_last_indexed 'x') 'YYYY-MM-DDTHH:mm:ssZ'}}",
  "description": {{{stringify (concat '' (truncate (striptags description) 280))}}},
  "articleBody": {{{stringify (concat '' (striptags content))}}}
}
</script>