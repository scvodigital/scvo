<li class="card card-no-padding list expanded scvo-post scvo-post-{{wpid}} supplimentary-list-item">
  <div class="card-header">
    <div class="card-title h4">
      <a href="{{path}}">{{{title}}}</a>
    </div>
  </div>
  <div class="card-body">
    <div class="post-info">
      {{> content_post_info_author}}
      {{> content_post_info_published}}
      {{> content_post_info_categories}}
    </div>
    {{#if description_truncated ~}}
    <div class="supplimentary-list-text">
      {{{truncate description_truncated 280}}}
      <a href="{{path}}">Read more</a>
    </div>
    {{/if ~}}
  </div>
</li>