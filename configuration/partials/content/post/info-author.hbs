{{#if is_press_release ~}}
{{#unless (compare @root.route.name "page_press")}}
<div class="post-info-item post-info-author">
  <a href="/about/work/press-releases" title="Read more press releases" class="avatar avatar-sm">
    <img src="{{~>asset_url url='images/icons/android-chrome-192x192.png'~}}" class="photo-wee scvo-staff-photo-wee" style="border-radius: 0;" />
  </a>
  <a href="/about/work/press-releases" title="Read more press releases" class="author">Press release</a>
</div>
{{/unless}}
{{else}}
<div class="post-info-item post-info-author">
  <a href="/post/author/{{author_slug}}" title="Read more by {{author_name_full}}" class="avatar avatar-sm">
    <img src="{{default og_image author_avatar}}" alt="{{author_name_full}}" class="photo-wee scvo-{{#if staff_profile}}staff{{else}}cms-author{{/if}}-photo-wee" />
  </a>
  <a href="/post/author/{{author_slug}}" title="Read more by {{author_name_full}}" class="author">{{{author_name_full}}}</a>
</div>
{{/if ~}}
