<div class="card card-no-padding search-result expanded scvo-post scvo-post-{{wpid}}">
  <div class="card-header">
    <div class="card-title h3">
      <a href="{{path}}">{{{title}}}</a>
    </div>
  </div>
  <div class="card-body">
    <div class="post-info">
      {{> content_post_info_author}}
      {{> content_post_info_published}}
    </div>
    <div class="post-info">
      {{> content_post_info_categories}}
    </div>
    {{#if description_truncated ~}}
    <p>
      {{{truncate description_truncated 280}}}
      <a href="{{path}}">Read more</a>
    </p>
    {{/if ~}}
  </div>
</div>