<div class="gist goodmoves-vacancy goodmoves-vacancy-{{Id}}">
  <div class="columns">
    <div class="column col-3 col-md-4">
      {{#if organisation.has_logo ~}}
      <a href="https://goodmoves.com/organisation/{{organisation.id}}/{{organisation.name_slug}}" title="More jobs with {{organisation.name}}" class="thumbnail no-underline">
        <img src="{{organisation.logo_url}}" alt="{{organisation.name}}" class="logo avatar avatar-xl" />
      </a>
      {{/if ~}}
    </div>
    <div class="column col-9 col-md-8">
      <h4>
        <a href="https://goodmoves.com/vacancy/{{Id}}/{{title_slug}}?utm_source=scvo&utm_campaign=list&utm_medium=website">{{{title}}} - {{{organisation.name}}}</a>
      </h4>
      <div class="post-info">
        <div class="post-info-item post-info-closing-date">
          <span class="far fa-calendar-exclamation" aria-hidden="true"></span>
          {{momentFormat (moment closing_date "x") "Do MMMM YYYY"}}
        </div>
      </div>
    </div>
  </div>
</div>