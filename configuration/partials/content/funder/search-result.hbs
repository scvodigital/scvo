<div class="mdc-card search-result" data-funder-id="{{Id}}">
  <div class="mdc-card__info--content-secondary-row">
    <div class="mdc-card__info--content-secondary">
      <div class="mdc-card__info--content-secondary-title mdc-typography--headline6">
        <a href="/funder/{{Id}}/{{slug}}{{> query_search}}">{{title}}</a>
      </div>
      <div class="search-result-article__snippet mdc-typography--body1">
        {{{truncate (stripTags (default description og_summary)) 280}}}
      </div>
    </div>
  </div>
  <div class="mdc-card__actions">
    <div class="mdc-card__action-buttons demo-card__action-buttons--text-only mdc-card__actions--full-bleed">
      <a href="/funder/{{Id}}/{{slug}}{{> query_search}}" class="mdc-card__action hide-sm">Find out more</a>
      <a href="/funder/{{Id}}/{{slug}}{{> query_search}}" class="mdc-card__action hide-md hide-lg"><span class="fal fa-info-circle fa-fw fa-2x" aria-hidden="true"></span></a>
    </div>
  </div>
</div>