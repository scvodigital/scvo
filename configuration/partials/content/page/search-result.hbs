<div class="card card-no-padding search-result expanded scvo-page scvo-page-{{wpid}}">
  <div class="card-header">
    <div class="card-title">
      <a href="{{path}}">{{{title}}}</a>
    </div>
  </div>
  <div class="card-body">
    {{#if description_truncated ~}}
    <p>
      {{{truncate description_truncated 280}}}
      <a href="{{path}}">Read more</a>
    </p>
    {{/if ~}}
  </div>
</div>