{
  "authNotRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.scvo_token",
			"cookieName": "scvo_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "scvo",
			"notAuthenticatedRoute": ""
		}
	},
	"authRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.scvo_token",
			"cookieName": "scvo_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "scvo",
			"notAuthenticatedRoute": "sign_in"
		}
	},
  "cjsAuthNotRequired": {
		"name": "cjsAuth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.cjs_token",
			"cookieName": "cjs_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "cjs",
			"notAuthenticatedRoute": ""
		}
	},
	"cjsAuthRequired": {
		"name": "cjsAuth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.cjs_token",
			"cookieName": "cjs_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "cjs",
			"notAuthenticatedRoute": "cjs_sign_in"
		}
	},
  "getSignUpStatus": {
		"name": "signUpStatus",
		"taskModule": "firebaseRtbGet",
		"renderer": "handlebars",
		"config": {
			"appName": "scvo",
			"pathTemplate": "/{{default data.auth.uid 'no-such-read-profile'}}/signup-status",
			"defaultData": ""
		}
	},
	"getAccountInfoSF": {
		"name": "accountInfo",
		"taskModule": "salesforceApex",
		"renderer": "handlebars",
    "cache": {
			"keyProperties": ["$accountInfo"],
			"partition": "scvo-profiles-{{data.auth.uid}}",
			"ttl": 3600
		},
		"config": {
			"connection": "scvoAlexSandbox",
			"output": "data",
			"method": "GET",
			"apexClassPath": "/User/?user_id={{@root.data.auth.uid}}"
		}
	},
  "getAccountInfo": {
		"name": "accountInfo",
		"taskModule": "render",
		"renderer": "handlebars",
		"config": {
			"output": "data",
			"template": "{\"external_id\":\"test\",\"verification_needed\":false}"
		}
	},
  "getOrganisationInfo": {
    "name": "organisationInfo",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": {
        "index": "{$elasticsearch-index.txt}",
        "type": "scvo-member",
        "template": ">context.metaData.handlebars.queries.organisations_explore-organisation"
      }
    },
    "renderer": "handlebars"
  },
  "fullSignUpRequired": {
		"name": "signUpReroute",
		"taskModule": "reroute",
		"config": {
			"if": [{
					"missing": "data.accountInfo.external_id"
				},
				"sd-needed",
				{
					"if": [{
							"var": "data.accountInfo.verification_needed"
						},
						"approval-required",
						null
					]
				}
			]
		}
	},
  "redirectIfApprovalNeeded": {
		"name": "redirectIfPV",
		"taskModule": "reroute",
		"config": {
			"if": [{
					"var": "data.accountInfo.verification_needed"
				},
				"approval-required",
				null
			]
		}
	},
  "flushCache": {
		"name": "flushCache",
		"taskModule": "cacheFlush",
		"renderer": "handlebars",
		"config": {
			"partition": "scvo-profiles-{{data.auth.uid}}"
		}
	},
  "getCheckupData": {
    "name": "checkup",
    "taskModule": "render",
    "renderer": "handlebars",
    "config": {
      "output": "data",
      "template": ">context.metaData.handlebars.templates.support_checkup_questions_data",
      "parseJson": true
    }
  },
  "postsLatest": {
    "name": "postsLatest",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": {
        "index": "{$elasticsearch-index.txt}",
        "type": "scvo-post",
        "template": ">context.metaData.handlebars.queries.posts_latest"
      }
    },
    "renderer": "handlebars"
  },
  "postsBlog": {
    "name": "postsBlog",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": {
        "index": "{$elasticsearch-index.txt}",
        "type": "scvo-post",
        "template": ">context.metaData.handlebars.queries.posts_category-blog"
      }
    },
    "renderer": "handlebars"
  },
  "postsRelated": {
    "name": "postsRelated",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": {
        "index": "{$elasticsearch-index.txt}",
        "type": "scvo-post",
        "template": ">context.metaData.handlebars.queries.posts_related-random"
      }
    },
    "renderer": "handlebars"
  },
  "getOrganisation": {
    "name": "organisation",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": {
        "index": "{$elasticsearch-index.txt}",
        "type": "scvo-organisation",
        "template": ">context.metaData.handlebars.queries.organisations_explore-organisation"
      }
    },
    "renderer": "handlebars"
  },
  "getOrganisationResponses": {
    "name": "organisationResponses",
    "taskModule": "elasticsearch",
    "config": {
      "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
      "elasticsearchConfig": {
        "apiVersion": "5.6"
      },
      "queryTemplates": [
        {
          "name": "vacancies",
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "cjs-vacancy,goodmoves-vacancy",
          "template": ">context.metaData.handlebars.queries.organisations_explore-vacancies"
        },
        {
          "name": "volunteering",
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "milo-volunteering-opportunity",
          "template": ">context.metaData.handlebars.queries.organisations_explore-volunteering"
        },
        {
          "name": "grants",
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-grant-cats,scvo-grant-ccrf,scvo-grant-charter,scvo-grant-cyber,scvo-grant-wellbeing,scvo-grant-wellbeing-legacy",
          "template": ">context.metaData.handlebars.queries.organisations_explore-grants"
        },
        {
          "name": "charters",
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "charter-signatory-digitalparticipation,charter-signatory-humanrights",
          "template": ">context.metaData.handlebars.queries.organisations_explore-charters"
        }
      ]
    },
    "renderer": "handlebars"
  }
}