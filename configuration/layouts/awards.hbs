<!doctype html>
<html lang="en">
<head prefix="og: http://ogp.me/ns#">
  {{{layoutParts.head}}}
  {{> layout_head}}
</head>
<body class="{{#if request.params.path}}{{replace request.params.path '_' ' '}}{{else}}home{{/if}}">
  {{!-- {{> layout_sites_bar}} --}}
  <div class="hide-lg">
    {{> components_scvo_bar}}
  </div>
  {{!-- {{> layout_header_upper}} --}}
  <div class="page">
    <div class="bg-rouleaux">
      <div class="container">
        <header class="navbar header v-padding">
          <section class="navbar-section">
            <a href="/" class="navbar-brand b-margin-full" title="Scottish Council for Voluntary Organisations">
              <img src="{{~>asset_url url='images/logos/scvo-primary.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
            </a>
          </section>
          <section class="navbar-section">
            <div class="form-horizontal hide-lg">
              {{> site_search_form id='header'}}
              {{!-- <a href="/scottish-charity-awards/apply-2020" class="btn btn-primary btn-lg btn-cta float-right">Apply now</a> --}}
            </div>
            <div class="mobile-header-buttons show-lg">
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-search": {
                            "removeClass": "mobile-search_closed mobile-search_closing",
                            "addClass": "mobile-search_open"
                          }
                        }
                      }
                    ]
                  }
                }'>
                <span class="far fa-search fa-fw fa-2x" aria-hidden="true"></span>
              </a>
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-menu": {
                            "removeClass": "mobile-menu_closed mobile-menu_closing",
                            "addClass": "mobile-menu_open"
                          }
                        }
                      }
                    ]
                  }
                }'>
                <span class="far fa-bars fa-fw fa-2x" aria-hidden="true"></span>
              </a>
            </div>
          </section>
        </header>
      </div>

      <div class="container">
        <header class="navbar toolbar hide-lg">
          <section class="navbar-section site-tab-bar">
            {{#each context.metaData.layoutMenus.awards ~}}
            <a class="btn btn-link{{#if (regexMatch ../request.url.pathname route 'gi')}} active{{/if}}" href="{{stripTrailingSlash path}}">{{{label}}}</a>
            {{/each ~}}
          </section>
          <section class="navbar-center"></section>
        </header>
      </div>

      <div class="mobile-search mobile-search_closed">
        <aside class="mobile-contents sidebar bg-primary">
          <header class="navbar header">
            <section class="navbar-section">
              <a href="/" class="navbar-brand" title="Scottish Council for Voluntary Organisations">
                <img src="{{~>asset_url url='images/logos/scvo-white.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
              </a>
            </section>
            <section class="navbar-section">
              <div class="mobile-header-buttons">
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-search": {
                            removeClass: "mobile-search_open",
                            addClass: "mobile-search_closing"
                          }
                        }
                      },
                      {
                        type: "delay",
                        config: {
                          "200": [
                            {
                              type: "elementManipulator",
                              config: {
                                ".mobile-search": {
                                  addClass: "mobile-search_closed",
                                  removeClass: "mobile-search_closing"
                                }
                              }
                            }
                          ]
                        }
                      }
                    ]
                  }
                }'>
                  <span class="far fa-times fa-fw fa-2x" aria-hidden="true"></span>
                </a>
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                  data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              "removeClass": "mobile-menu_closed mobile-menu_closing",
                              "addClass": "mobile-menu_open"
                            }
                          }
                        },
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-search": {
                              "removeClass": "mobile-search_open",
                              "addClass": "mobile-search_closed"
                            }
                          }
                        }
                      ]
                    }
                  }'>
                  <span class="far fa-bars fa-fw fa-2x" aria-hidden="true"></span>
                </a>
              </div>
            </section>
          </header>
          <div class="b-margin-full v-padding-full">
            {{> site_search_form id='mobile'}}
          </div>
        </aside>
      </div>

      <div class="mobile-menu mobile-menu_closed">
        <aside class="mobile-contents sidebar bg-primary">
          <header class="navbar header">
            <section class="navbar-section">
              <a href="/" class="navbar-brand" title="Scottish Council for Voluntary Organisations">
                <img src="{{~>asset_url url='images/logos/scvo-white.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
              </a>
            </section>
            <section class="navbar-section">
              <div class="mobile-header-buttons">
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                  data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-search": {
                              "removeClass": "mobile-search_closed mobile-search_closing",
                              "addClass": "mobile-search_open"
                            }
                          }
                        },
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              "removeClass": "mobile-menu_open",
                              "addClass": "mobile-menu_closed"
                            }
                          }
                        }
                      ]
                    }
                  }'>
                <span class="far fa-search fa-fw fa-2x" aria-hidden="true"></span>
              </a>
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              removeClass: "mobile-menu_open",
                              addClass: "mobile-menu_closing"
                            }
                          }
                        },
                        {
                          type: "delay",
                          config: {
                            "200": [
                              {
                                type: "elementManipulator",
                                config: {
                                  ".mobile-menu": {
                                    addClass: "mobile-menu_closed",
                                    removeClass: "mobile-menu_closing"
                                  }
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }'>
                  <span class="far fa-times fa-fw fa-2x" aria-hidden="true"></span>
                </a>
              </div>
            </section>
          </header>

          <div class="b-margin-full v-padding-full">
            <ul class="menu b-padding-full">
              {{#each @root.context.metaData.layoutMenus.awards ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              <li class="menu-item t-margin-full">
                <a href="/" class="{{#if (regexMatch @root.request.url.pathname '^/$' 'gi')}}active{{/if}}">
                  <span class="far fa-fw fa-home" aria-hidden="true"></span>
                  Home
                </a>
              </li>
              {{#each @root.context.metaData.layoutMenus.main ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              {{#if @root.data.auth ~}}
              {{#each @root.context.metaData.layoutMenus.user-signed-in ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              {{else}}
              {{#each @root.context.metaData.layoutMenus.user-not-signed-in ~}}
              {{!-- <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li> --}}
              {{/each ~}}
              {{/if ~}}
            </ul>
            <h5 class="x-padding">Our sites</h5>
            {{> components_scvo_bar}}
          </div>
        </aside>
      </div>

      {{#compare @root.request.url.path "/scottish-charity-awards"}}
      <div class="container v-margin-full">
        <div class="b-margin-full splash-image splash-image-header">
           {{!-- style="background-image:url('{{~>asset_url url='images/home/charityawards-bg.jpg'~}}');" --}}
          <div class="splash-overlay splash-overlay-hidden v-padding-full" style="--aspect-ratio: 3/1;background-image:url('{{~>asset_url url='images/home/charityawards-bg.jpg'~}}');background-size:cover;">
            <div class="header-logo hide-sm">
              <div class="header-image">
                <img src="{{~>asset_url url='images/awards/logo_2020_inline_reverse.svg'~}}" alt="Scottish Charity Awards">
              </div>
              <p class="header-text">
                Friday 25 September<br />
                <a href="https://twitter.com/scvotweet" target="_blank">@scvotweet</a>
              </p>
            </div>
            <div class="header-logo show-sm">
              <img src="{{~>asset_url url='images/awards/logo_2020_stacked_reverse.svg'~}}" alt="Scottish Charity Awards">
              <p class="header-text">
                Friday 25 September<br />
                <a href="https://twitter.com/scvotweet" target="_blank">@scvotweet</a>
              </p>
            </div>
          </div>
        </div>
      </div>
      {{/compare}}

      {{> layout_body}}

      {{> layout_footer}}
    </div>
  </div>

  {{> layout_foot}}

  {{{layoutParts.foot}}}
</body>
</html>