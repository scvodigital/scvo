<!doctype html>
<html lang="en">
<head prefix="og: http://ogp.me/ns#">
  {{{layoutParts.head}}}
  {{> layout_head}}
</head>
<body class="{{#if request.params.path}}{{replace (replace request.params.path '20-years' 'twenty-years') '_' ' '}}{{else}}home{{/if}}">
  <div class="hide-lg">
    {{> components_scvo_bar}}
  </div>
  <div class="page">
    {{!-- style="background-image:url('/rouleaux.svg?color=FEF9F9&style={{itemAt (split 'solid,stripes,dots' ',') (random 0 2)}}');" --}}
    <div class="bg-rouleaux">
      <div class="container">
        <header class="navbar header">
          <section class="navbar-section">
            <a href="/" class="navbar-brand b-margin" title="Scottish Council for Voluntary Organisations">
              <img src="{{~>asset_url url='images/logos/scvo-primary.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
            </a>
          </section>
          <section class="navbar-section">
            <div class="form-horizontal hide-lg">
              {{> site_search_form}}
              <a href="/services/membership" class="btn btn-primary btn-lg btn-cta float-right">Join our community</a>
            </div>
            <div class="mobile-header-buttons show-lg">
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-search": {
                            "removeClass": "mobile-search_closed mobile-search_closing",
                            "addClass": "mobile-search_open"
                          }
                        }
                      }
                    ]
                  }
                }'>
                <span class="far fa-search fa-fw fa-2x" aria-hidden="true"></span>
              </a>
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-menu": {
                            "removeClass": "mobile-menu_closed mobile-menu_closing",
                            "addClass": "mobile-menu_open"
                          }
                        }
                      }
                    ]
                  }
                }'>
                <span class="far fa-bars fa-fw fa-2x" aria-hidden="true"></span>
              </a>
            </div>
          </section>
        </header>
        <header class="navbar toolbar hide-lg">
          <section class="navbar-section site-tab-bar">
            {{#each context.metaData.layoutMenus.main ~}}
            <a class="btn btn-link{{#if (regexMatch ../request.url.pathname route 'gi')}} active{{/if}}" href="{{stripTrailingSlash path}}">{{{label}}}</a>
            {{/each ~}}
          </section>
          <section class="navbar-center"></section>
          <section class="navbar-section">
          {{#if @root.data.auth ~}}
            <div class="dropdown my-account signed-in">
              <div class="btn-group">
                <a href="#" class="btn btn-link dropdown-toggle{{#each context.metaData.layoutMenus.user}}{{#if (regexMatch ../request.url.pathname route 'gi')}} active{{/if}}{{/each}}">
                  {{#if @root.data.auth.photoURL ~}}
                    <img src="{{@root.data.auth.photoURL}}" class="avatar avatar-sm" />
                  {{else}}
                    <span class="far fa-fw fa-user-circle"></span>
                  {{/if ~}}
                  {{default @root.data.auth.email @root.data.auth.displayName}}
                  <span class="far fa-fw fa-angle-down"></span>
                </a>
                <ul class="menu">
                  <li class="menu-item">
                    <a href="/" class="l-padding">
                      <span class="far fa-fw fa-home r-margin" aria-hidden="true"></span>
                      Home
                    </a>
                  </li>
                  {{#each context.metaData.layoutMenus.user-signed-in ~}}
                  <li class="menu-item{{#if (regexMatch ../request.url.pathname route 'gi')}} active{{/if}}">
                    <a href="{{stripTrailingSlash path}}" class="l-padding">
                      {{#if icon ~}}
                      <span class="far fa-fw fa-{{icon}} r-margin" aria-hidden="true"></span>
                      {{/if ~}}
                      {{{label}}}
                    </a>
                  </li>
                  {{/each ~}}
                  <li class="menu-item">
                    <a href="/sign-out" class="l-padding" data-component="TasksTrigger" data-taskstrigger="sign-out">
                      <span class="far fa-fw fa-sign-out-alt r-margin" aria-hidden="true"></span>
                      Sign out
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          {{else}}
          {{#each context.metaData.layoutMenus.user-not-signed-in ~}}
          <a href="{{stripTrailingSlash path}}" class="btn btn-link{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
            {{{label}}}
          </a>
          {{/each ~}}
          {{/if ~}}
          </section>
        </header>
      </div>

      <div class="mobile-search mobile-search_closed">
        <aside class="mobile-contents sidebar bg-primary">
          <header class="navbar header">
            <section class="navbar-section">
              <a href="/" class="navbar-brand" title="Scottish Council for Voluntary Organisations">
                <img src="{{~>asset_url url='images/logos/scvo-white.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
              </a>
            </section>
            <section class="navbar-section">
              <div class="mobile-header-buttons">
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                  click: {
                    tasks: [
                      {
                        type: "elementManipulator",
                        config: {
                          ".mobile-search": {
                            removeClass: "mobile-search_open",
                            addClass: "mobile-search_closing"
                          }
                        }
                      },
                      {
                        type: "delay",
                        config: {
                          "200": [
                            {
                              type: "elementManipulator",
                              config: {
                                ".mobile-search": {
                                  addClass: "mobile-search_closed",
                                  removeClass: "mobile-search_closing"
                                }
                              }
                            }
                          ]
                        }
                      }
                    ]
                  }
                }'>
                  <span class="far fa-times fa-fw fa-2x text-white" aria-hidden="true"></span>
                </a>
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                  data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              "removeClass": "mobile-menu_closed mobile-menu_closing",
                              "addClass": "mobile-menu_open"
                            }
                          }
                        },
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-search": {
                              "removeClass": "mobile-search_open",
                              "addClass": "mobile-search_closed"
                            }
                          }
                        }
                      ]
                    }
                  }'>
                  <span class="far fa-bars fa-fw fa-2x text-white" aria-hidden="true"></span>
                </a>
              </div>
            </section>
          </header>
          <div class="b-margin-full v-padding-full">
            {{> site_search_form}}
          </div>
        </aside>
      </div>

      <div class="mobile-menu mobile-menu_closed">
        <aside class="mobile-contents sidebar bg-primary">
          <header class="navbar header">
            <section class="navbar-section">
              <a href="/" class="navbar-brand" title="Scottish Council for Voluntary Organisations">
                <img src="{{~>asset_url url='images/logos/scvo-white.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
              </a>
            </section>
            <section class="navbar-section">
              <div class="mobile-header-buttons">
                <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                  data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-search": {
                              "removeClass": "mobile-search_closed mobile-search_closing",
                              "addClass": "mobile-search_open"
                            }
                          }
                        },
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              "removeClass": "mobile-menu_open",
                              "addClass": "mobile-menu_closed"
                            }
                          }
                        }
                      ]
                    }
                  }'>
                <span class="far fa-search fa-fw fa-2x text-white" aria-hidden="true"></span>
              </a>
              <a href="#" class="btn btn-link" aria-label="Menu" data-component="TasksTrigger"
                data-TasksTrigger='{
                    click: {
                      tasks: [
                        {
                          type: "elementManipulator",
                          config: {
                            ".mobile-menu": {
                              removeClass: "mobile-menu_open",
                              addClass: "mobile-menu_closing"
                            }
                          }
                        },
                        {
                          type: "delay",
                          config: {
                            "200": [
                              {
                                type: "elementManipulator",
                                config: {
                                  ".mobile-menu": {
                                    addClass: "mobile-menu_closed",
                                    removeClass: "mobile-menu_closing"
                                  }
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }'>
                  <span class="far fa-times fa-fw fa-2x text-white" aria-hidden="true"></span>
                </a>
              </div>
            </section>
          </header>
          <div class="b-margin-full v-padding-full">
            <ul class="menu b-padding-full">
              <li class="menu-item">
                <a href="/" class="{{#if (regexMatch @root.request.url.pathname '^/$' 'gi')}}active{{/if}}">
                  <span class="far fa-fw fa-home" aria-hidden="true"></span>
                  Home
                </a>
              </li>
              {{#each @root.context.metaData.layoutMenus.main ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              {{#if @root.data.auth ~}}
              {{#each @root.context.metaData.layoutMenus.user-signed-in ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              {{else}}
              {{#each @root.context.metaData.layoutMenus.user-not-signed-in ~}}
              <li class="menu-item">
                <a href="{{stripTrailingSlash path}}" class="{{#if (regexMatch @root.request.url.pathname route 'gi')}} active{{/if}}">
                  {{#if icon ~}}
                  <span class="far fa-fw fa-{{icon}}" aria-hidden="true"></span>
                  {{/if ~}}
                  {{{label}}}
                </a>
              </li>
              {{/each ~}}
              {{/if ~}}
            </ul>
          </div>
        </aside>
      </div>

      {{#if layoutParts.fullWidthBody ~}}
      {{{layoutParts.header}}}
      {{{layoutParts.fullWidthBody}}}
      {{{layoutParts.footer}}}
      {{else}}
      {{#ifAny layoutParts.leftSidebar layoutParts.rightSidebar ~}}
      <div class="sidebar-present container">
        {{{layoutParts.header}}}
        <div class="columns">
          {{#ifAll layoutParts.leftSidebar layoutParts.rightSidebar ~}}
          <aside class="sidebar sidebar-left column col-3 col-xl-4 hide-lg">
            {{{layoutParts.leftSidebar}}}
          </aside>
          <main class="body column col-xs-auto">
            {{{layoutParts.body}}}
          </main>
          <aside class="sidebar sidebar-right column col-3 col-xl-4 hide-lg">
            {{{layoutParts.rightSidebar}}}
          </aside>
          {{else}}
          {{#if layoutParts.leftSidebar ~}}
          <aside class="sidebar sidebar-left column col-3 col-xl-4 hide-lg">
            {{{layoutParts.leftSidebar}}}
          </aside>
          <main class="body column col-xs-auto">
            {{{layoutParts.body}}}
          </main>
          {{else}}
          <main class="body column col-xs-auto">
            {{{layoutParts.body}}}
          </main>
          <aside class="sidebar sidebar-right column col-3 col-xl-4 hide-lg">
            {{{layoutParts.rightSidebar}}}
          </aside>
          {{/if ~}}
          {{/ifAll ~}}
        </div>
        {{{layoutParts.footer}}}
      </div>
      {{else}}
      <div class="sidebar-not-present container">
        {{{layoutParts.header}}}
        <main class="body">
          {{{layoutParts.body}}}
        </main>
        {{{layoutParts.footer}}}
      </div>
      {{/ifAny ~}}
      {{/if ~}}

      <footer>
        <div class="footer-main">
          <div class="container">
            <div class="columns">
              <div class="column col-12 col-ml-auto membership">
                <a href="/services/membership" class="btn btn-primary btn-lg btn-cta pull-right b-margin">Join our community</a>
              </div>
            </div>
            <div class="columns">
              <div class="column col-3 col-lg-6 col-md-12 contact">
                <h4>Contact</h4>
                <ul class="fa-ul">
                  <li>
                    <span class="fa-li"><span class="fas fa-envelope"></span></span>
                    <a href="mailto:enquiries@scvo.org.uk">enquiries@scvo.org.uk</a>
                  </li>
                  <li>
                    <span class="fa-li"><span class="fas fa-phone fa-flip-horizontal"></span></span>
                    <a href="tel:+441314748000">0131 474 8000</a>
                  </li>
                </ul>
                <p>
                  Information service helpline
                </p>
                <ul class="fa-ul">
                  <li>
                    <span class="fa-li"><span class="fas fa-phone fa-flip-horizontal"></span></span>
                    <a href="tel:+448001690022">0800 169 0022</a>
                  </li>
                </ul>
                <ul class="">
                  <li class=""><a href="/services/membership">Become a member</a></li>
                </ul>
              </div>
              <div class="column col-3 col-lg-6 col-md-12 social">
                <h4>Social</h4>
                <ul class="fa-ul">
                  <li>
                    <span class="fa-li" aria-hidden="true"><span class="fab fa-twitter"></span></span>
                    <a href="https://twitter.com/scvotweet" rel="noopener">Twitter</a>
                  </li>
                  <li>
                    <span class="fa-li" aria-hidden="true"><span class="fab fa-facebook"></span></span>
                    <a href="https://www.facebook.com/SCVO1939" rel="noopener">Facebook</a>
                  </li>
                  <li>
                    <span class="fa-li" aria-hidden="true"><span class="fas fa-heart"></span></span>
                    <a href="https://goodhq.org/scvo">Good HQ</a>
                  </li>
                  <li>
                    <span class="fa-li" aria-hidden="true"><span class="fab fa-youtube"></span></span>
                    <a href="https://www.youtube.com/user/SCVOtv" rel="noopener">YouTube</a>
                  </li>
                  <li>
                    <span class="fa-li" aria-hidden="true"><span class="fab fa-linkedin"></span></span>
                    <a href="https://www.linkedin.com/company/scvo" rel="noopener">LinkedIn</a>
                  </li>
                </ul>
              </div>
              <div class="column col-3 col-lg-6 col-md-12 help">
                <h4>Help</h4>
                <ul class="">
                  {{#each @root.context.metaData.layoutMenus.footer ~}}
                  <li class=""><a href="{{path}}">{{{label}}}</a></li>
                  {{/each ~}}
                </ul>
              </div>
              <div class="column col-3 col-lg-6 col-md-12 about">
                <h4>About</h4>
                <p>
                  The Scottish Council for Voluntary Organisations is the membership organisation for Scotland's charities, voluntary organisations and social enterprises. <a href="/about">Find out more</a>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container">
            <div class="columns">
              <div class="copyright column col-10 col-lg-12">
                <p>
                  &copy; {{momentFormat (moment) "YYYY"}}. The Scottish Council for Voluntary Organisations (SCVO) is a Scottish Charitable Incorporated Organisation.<br />
                  Charity registered in Scotland <a href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC003558">SC003558</a>. Registered office Mansfield Traquair Centre, 15 Mansfield Place, Edinburgh EH3 6BB.
                </p>
              </div>
              <div class="logos column col-2 col-ml-auto col-lg-12">
                <a href="https://scvo.org" class="scvo-logo" title="Scottish Council for Voluntary Organisations">
                  <img src="{{~>asset_url url='images/logos/scvo-secondary.svg'~}}" alt="Scottish Council for Voluntary Organisations" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>

  {{#each @root.context.metaData.handlebars.frontend.configs ~}}
  <script data-component-config="{{@key}}" type="javascript/blocked">
  {{{regexReplace (regexReplace this "^\s*return\s" "igm" "") "([^\\{])({{){2,}" "igm" "$1\\$2"}}}
  </script>
  {{/each ~}}

  {{#each @root.context.metaData.handlebars.frontend.tasks ~}}
  <script data-task="{{@key}}" type="javascript/blocked">
  {{{regexReplace (regexReplace this "^\s*return\s" "igm" "") "([^\\{])({{){2,}" "igm" "$1\\$2"}}}
  </script>
  {{/each ~}}

  {{#each @root.context.metaData.handlebars.frontend.partials ~}}
  <script data-partial="{{@key}}" type="javascript/blocked">
  {{{this}}}
  </script>
  {{/each ~}}

