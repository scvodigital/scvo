{
  "size": 5,
  "_source": [
    "slug",
    "title",
    "rendered.scvo_sidebar_mini"
  ],
  "query": {
    {{#if @root.data.primaryResponse.hits.hits.[0] ~}}
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        }
      ],
      "must": {
        "match_all": {}
      },
      "should": [
        {
          "terms": {
            "categories_id": [
              {{join @root.data.primaryResponse.hits.hits.[0]._source.categories_id}}
            ]
          }
        }
      ],
      "minimum_should_match": 1
    }
    {{else}}
    "match_none": {}
    {{/if ~}}
  },
  "sort": {
    "publish_on": "desc"
  }
}