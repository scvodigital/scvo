{
  "size": 6,
  "_source": [
    "title",
    "rendered.scvo_search_result"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        }
      ],
      "should": [
        {
          {{#if data.primaryResponse.hits.hits.[0]}}
          "match_none": {}
          {{else}}
          "query_string": {
            "query": "{{{regexReplace (default @root.request.url.path "") "([^a-zA-Z0-9\s])" "gi" " "}}}",
            "default_field": "text_bag_boost",
            "default_operator": "OR",
            "analyzer": "snowball"
          }
          {{/if}}
        }
      ]
    }
  }
}