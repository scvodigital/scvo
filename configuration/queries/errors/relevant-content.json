{
  "size": 6,
  "_source": [
    "wpid",
    "slug",
    "title",
    "sub_title",
    "og_title",
    "og_summary",
    "description",
    "content",
    "rendered.json_ld",
    "breadcrumb",
    "categories_id",
    "categories_slug",
    "author",
    "path",
    "url"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        }
      ],
      "should": [
        {
          {{#if @root.data.primaryResponse.hits.hits.[0]}}
          "match_none": {}
          {{else}}
          "query_string": {
            "query": "{{{regexReplace (default @root.request.url.path "") "([^a-zA-Z0-9\s])" "gi" " "}}}",
            "default_field": "text_bag_boost",
            "default_operator": "OR",
            "analyzer": "snowball"
          }
          {{/if}}
        }
      ]
    }
  }
}