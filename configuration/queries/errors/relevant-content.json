{
  "size": 6,
  "_source": [
    "Id",
    "wpid",
    "title",
    "description",
    "url",
    "is_press_release",
    "author_name_full",
    "author_slug",
    "author_avatar",
    "og_image",
    "staff_profile",
    "categories",
    "categories_slug",
    "post_tags",
    "post_tags_slug",
    "publish_on",
    "updated"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        }
      ],
      "should": [
        {
          {{#if @root.data.primaryResponse.hits.hits.[0]}}
          "match_none": {}
          {{else}}
          "query_string": {
            "query": "{{{regexReplace (default @root.request.url.path "") "([^a-zA-Z0-9\s])" "gi" " "}}}",
            "default_field": "text_bag_boost",
            "default_operator": "OR",
            "analyzer": "snowball"
          }
          {{/if}}
        }
      ]
    }
  }
}