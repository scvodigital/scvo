{{#withExtend this q=(default @root.request.params.query.q (default @root.data.eoi_data.[0].Account__r.Scottish_Charity_Number__c @root.request.params.charity_number))}}
{
  "size": 5,
  "_source": [
    "constitutional_form",
    "charity_status",
    "main_operating_location",
    "charity_name",
    "charity_number",
    "website",
    "geo.admin_district",
    "geo.nhs_ha",
    "postcode"
  ],
  "query": {
    {{#compare q "not-a-charity"}}
    "match_none": {}
    {{else}}
    "bool": {
      "must": [
        {
          "wildcard": {
            "charity_number": {{{stringify (concat "*" q "*")}}}
          }
        }
      ]
    }
    {{/compare}}
  }
}
{{/withExtend}}