{
  "size": 50,
  "_source": [
    "Id",
    "title",
    "title_slug",
    "funder_organisation",
    "fund_url",
    "url",
    "date_last_modified"
  ],
  "query": {
    "bool": {
      "filter": [
        {
          "terms": {
            "source_of_fund_slug": [
              "community-benefit",
              "european",
              "lottery",
              "private-for-profit-organisation",
              "trust-foundation"
            ]
          }
        }
      ],
      "must": [
        {
          "query_string": {
            "query": "coronavirus covid corona COVID-19",
            "fields": [
              "text_bag_boost^5",
              "text_bag"
            ],
            "default_operator": "OR",
            "analyzer": "snowball"
          }
        }
      ]
    }
  },
  "sort": {
    "funder_organisation.name": "asc"
  }
}
