{
  "size": 10000,
  "_source": [
    "*"
  ],
  "query": {
    {{#if @root.data.organisation.hits.hits.0._source.Id ~}}
    "bool": {
      "should": [
        {{#if @root.data.organisation.hits.hits.0._source.title ~}}
        {
          "term": {
            "recipient_name": "{{@root.data.organisation.hits.hits.0._source.title}}"
          }
        },
        {{/if}}
        {{#if @root.data.organisation.hits.hits.0._source.charity_number ~}}
        {
          "term": {
            "recipient_charity_number": "{{@root.data.organisation.hits.hits.0._source.charity_number}}"
          }
        },
        {{/if}}
        {
          "term": {
            "recipient_id": "{{@root.data.organisation.hits.hits.0._source.Id}}"
          }
        }
      ],
      "minimum_should_match": 1
    }
    {{else}}
    "match_none": {}
    {{/if ~}}
  }
}
