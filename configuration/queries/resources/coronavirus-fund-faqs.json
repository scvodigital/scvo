{
  "size": 100,
  "_source": [
    "question",
    "answer",
    "category"
  ],
  "query": {
    "bool": {
      "must": [
        {{#if @root.request.params.fund ~}}
        {
          "terms": {
            "fund": [
              {{#switch @root.request.params.fund}}
              {{#case "third-sector-resilience-fund"}}
              "TSRF"
              {{/case}}
              {{/switch ~}}
            ]
          }
        }
        {{/if ~}}
      ]
    }
  },
  "sort": {
    "question": "asc"
  },
  "aggs": {
    "query": {
      "terms": {
        "field": "category",
        "order": {
          "_term": "asc"
        },
        "size": 1000
      },
      "aggs": {
        "faqs": {
          "top_hits": {
            "size": 1000,
            "sort": {
              "weight": "asc"
            },
            "_source": {
              "includes": [
                "question",
                "answer"
              ]
            }
          }
        }
      }
    }
  }
}