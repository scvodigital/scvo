{
  "size": 100,
  "_source": [
    "title",
    "content",
    "post_tags_slug"
  ],
  "query": {
    "bool": {
      "must": [
        {{#if @root.request.params.section ~}}
        {
          "terms": {
            "post_tags_slug": [
              {{#switch @root.request.params.section}}
              {{#case "your-employees"}}
              "employment"
              {{/case}}
              {{#case "your-funding"}}
              "funding"
              {{/case}}
              {{#case "leading-your-organisation"}}
              "governance"
              {{/case}}
              {{#case "your-services"}}
              "services"
              {{/case}}
              {{#case "your-volunteers"}}
              "volunteering"
              {{/case}}
              {{#case "your-fundraising"}}
              "fundraising"
              {{/case}}
              {{#case "guidance"}}
              "general"
              {{/case}}
              {{/switch ~}}
            ]
          }
        },
        {{/if ~}}
        {
          "terms": {
            "post_tags_slug": [
              "coronavirus"
            ]
          }
        }
      ]
    }
  },
  "sort": {
    "weight": "desc"
  },
  "aggs": {
    "query": {
      "terms": {
        "field": "post_tags",
        "order": {
          "_term": "asc"
        },
        "size": 1000
      },
      "aggs": {
        "faqs": {
          "top_hits": {
            "size": 1000,
            "sort": {
              "weight": "asc"
            },
            "_source": {
              "includes": [
                "title",
                "content"
              ]
            }
          }
        }
      }
    }
  }
}