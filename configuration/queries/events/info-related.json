{
  "size": 4,
  "_source": [
    "title",
    "date_start",
    "Id",
    "path",
    "city",
    "description_short",
    "course_overview_short"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        }
      ],
      "must": [
        {
          "simple_query_string": {
            "query": "{{data.primaryResponse.hits.hits.[0]._source.title}} {{data.primaryResponse.hits.hits.[0]._source.type}} {{data.primaryResponse.hits.hits.[0]._source.trainer}}",
            "default_operator": "or",
            "fields": ["text_bag"],
            "analyzer": "snowball"
          }
        },
        {
          "range" : {
            "date_start" : {
              "gte" : "now/d"
            }
          }
        },
        {
          "term": {
            "team": "info"
          }
        },
        {
          "range" : {
            "places_available" : {
              "gte" : "1"
            }
          }
        }
      ],
      "should": [
        {
          "bool": {
            "must_not": {
              "match": {
                "Id": "{{data.primaryResponse.hits.hits.[0]._source.Id}}"
              }
            }
          }
        }
      ],
      "minimum_should_match": 1
    }
  }
}
