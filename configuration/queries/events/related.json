{
  "size": 4,
  "_source": [
    "title",
    "date_start",
    "Id",
    "path",
    "city",
    "description_short",
    "course_overview_short"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "match": {
            "Id": "{{@root.data.primaryResponse.hits.hits.[0]._source.Id}}"
          }
        },
        {
          "match": {
            "title": "{{@root.data.primaryResponse.hits.hits.[0]._source.title}}"
          }
        }
      ],
      "must": [
        {
          "simple_query_string": {
            "query": "{{@root.data.primaryResponse.hits.hits.[0]._source.title}} {{@root.data.primaryResponse.hits.hits.[0]._source.type}} {{@root.data.primaryResponse.hits.hits.[0]._source.trainer}}",
            "default_operator": "or",
            "fields": ["text_bag"],
            "analyzer": "snowball"
          }
        },
        {
          "range" : {
            "date_start" : {
              "gte" : "now/d"
            }
          }
        },
        {
          "term": {
            "team": "events"
          }
        },
        {
          "range" : {
            "places_available" : {
              "gte" : "1"
            }
          }
        }
      ]
    }
  }
}
