{
  "size": 10,
  "from": {{multiply (subtract (default request.params.query.page 1) 1) 10}},
  "_source": [
    "categories",
    "categories_id",
    "categories_slug",
    "post_tags",
    "post_tags_slug",
    "post_tags_id",
    "title",
    "path",
    "url",
    "og_image",
    "author_slug",
    "author_name_full",
    "author_avatar",
    "publish_on",
    "updated"
  ],
  "query": {
    "bool": {
      {{#if @root.data.primaryResponse.hits.hits.[0]._source.post_tags_slug}}
      "should": [
        {{#each @root.data.primaryResponse.hits.hits.[0]._source.post_tags_slug}}
        {
          "term": {
            "post_tags_slug": "{{this}}"
          }
        }{{#unless @last}},{{/unless}}
        {{/each}}
      ],
      "minimum_should_match": 1,
      {{/if}}
      "filter": [
        {
          "bool": {
            "should": [
              {
                "term": {
                  "post_tags_slug": "campaign-blog"
                }
              },
              {
                "term": {
                  "post_tags_slug": "research-blog"
                }
              },
              {
                "term": {
                  "post_tags_slug": "policy-blog"
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ],
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        },
        {
          "term": {
            "is_press_release": true
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
