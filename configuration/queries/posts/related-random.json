{
  "size": 4,
  "_source": [
    "categories_id",
    "title",
    "publish_on",
    "updated",
    "path",
    "url",
    "wpid",
    "description",
    "description_truncated",
    "is_press_release",
    "author_slug",
    "author_name_full",
    "og_image",
    "author_avatar",
    "staff_profile",
    "og_image",
    "categories",
    "categories_slug",
    "post_tags",
    "post_tags_slug",
    "post_slug"
  ],
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "must_not": [
            {{#if @root.data.postsLatest ~}}
            {
              "terms": {
                "wpid": [
                  {{#eachJoin (distinct (pluck @root.data.postsLatest.hits.hits "_source.wpid")) "," ~}}{{{stringify this}}}{{/eachJoin}}
                ]
              }
            },
            {{/if ~}}
            {
              "term": {
                "hide_in_results": true
              }
            },
            {
              "term": {
                "hide_from_search": "1"
              }
            },
            {
              "term": {
                "is_press_release": true
              }
            }
          ],
          {{#if @root.data.primaryResponse.hits.hits.[0]._source.categories_id ~}}
          "filter": [
            {
              "terms": {
                "categories_id": [
                  {{join @root.data.primaryResponse.hits.hits.[0]._source.categories_id}}
                ]
              }
            }
          ],
          {{/if ~}}
          "must": [
            {
              "more_like_this": {
                "fields": ["text_bag", "text_bag_boost^5", "title^10"],
                "like": "{{@root.data.primaryResponse.hits.hits.[0]._source.text_bag_boost}}",
                "min_term_freq": 1,
                "max_query_terms": 12
              }
            }
          ]
        }
      },
      "functions": [
        {
          "filter": {
            "term": {
              "_type": "scvo-post"
            }
          },
          "weight": 2,
          "gauss": {
            "publish_on": {
              "scale": "180d",
              "decay": 0.1
            }
          }
        }
      ],
      "score_mode": "multiply"
    }
  }
}