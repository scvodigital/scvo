{
  "size": 5,
  "_source": [
    "wpid",
    "post_slug",
    "title",
    "description",
    "author_name_full",
    "author_slug",
    "author_avatar",
    "publish_on",
    "updated"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        }
      ],
      "must": [
        {
          "term": {
            "categories_slug": "posts"
          }
        },
        {
          "term": {
            "is_press_release": false
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
