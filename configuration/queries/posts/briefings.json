{
  "size": 10,
  "from": {{multiply (subtract (default request.params.query.page 1) 1) 10}},
  "_source": [
    "categories",
    "categories_id",
    "categories_slug",
    "rendered.scvo_list",
    "rendered.scvo_gist"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        },
        {
          "term": {
            "is_press_release": true
          }
        }
      ],
      "must": [
        {
          "term": {
            "categories_id": 2
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
