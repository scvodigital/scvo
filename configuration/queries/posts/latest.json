    "publish_on",
    "updated",
    "path",
    "wpid",
    "description",
    "description_truncated",
    "is_press_release",
    "author_slug",
    "author_name_full",
    "og_image",
    "author_avatar",
    "staff_profile",
    "og_image",
    "categories",
    "categories_slug",
    "post_tags",
    "post_tags_slug",
    "post_slug"
  ],
  "query": {
    "bool": {
      {{#if @root.data.primaryResponse.hits.hits.[0]._source.categories_id ~}}
      "filter": [
        {
          "terms": {
            "categories_id": [
              {{join @root.data.primaryResponse.hits.hits.[0]._source.categories_id}}
            ]
          }
        }
      ],
      {{/if ~}}
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        },
        {
          "term": {
            "is_press_release": true
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}