{
  "size": 10,
  "from": {{multiply (subtract (default @root.request.params.query.page 1) 1) 10}},
  "_source": [
    "categories_id",
    "title",
    "publish_on",
    "path",
    "description",
    "description_truncated",
    "is_press_release",
    "author_slug",
    "author_name_full",
    "staff_profile",
    "og_image",
    "categories",
    "categories_slug",
    "post_tags",
    "post_tags_slug",
    "rendered.rss"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        }
      ]
      {{#if @root.request.params.category_slug ~}},
      "should": [
        {
          "terms": {
            "categories_slug": [
              "{{@root.request.params.category_slug}}"
            ]
          }
        }
      ],
      "minimum_should_match": 1
      {{/if ~}}
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}