{
  "size": 4,
  "_source": [
    "site",
    "path",
    "title",
    "image.medium",
    "d_published"
  ],
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "must": [
            {
              "term": {
                "k_post_status": "publish"
              }
            },
            {
              "term": {
                "type": "tfn-post"
              }
            },
            {
              "terms": {
                "k_post_type": [
                  "news"
                ]
              }
            }
          ],
          "should": [
            {
              "multi_match": {
                "fields": [ "textbag", "textbag_boost_1^5" ],
                "query": "Coronavirus COVID-19 {{@root.data.primaryResponse.hits.hits.[0]._source.title}} {{join @root.data.primaryResponse.hits.hits.[0]._source.categories}} {{join @root.data.primaryResponse.hits.hits.[0]._source.post_tags}}",
                "type": "most_fields",
                "tie_breaker": 0.3,
                "operator": "OR"
              }
            }
          ],
          "minimum_should_match": 0
        }
      },
      "functions": [
        {
          "gauss": {
            "d_published": {
              "scale": "7d",
              "decay": 0.1
            }
          }
        }
      ],
      "score_mode": "multiply"
    }
  }
}
