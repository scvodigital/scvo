{
  "size": 6,
  "_source": [
    "site",
    "path",
    "title",
    "image",
    "d_published"
  ],
  "query": {
    "bool": {
      "filter": [
        {
          "bool": {
            "filter": [
              {
                "term": {
                  "type": "tfn-post"
                }
              },
              {
                "terms": {
                  "k_post_type": [
                    "news"
                  ]
                }
              },
              {
                "nested": {
                  "path": "term_post_tag",
                  "query": {
                    "bool": {
                      "must": [
                        {
                          "term": {
                            "term_post_tag.slug": "nevermoreneeded"
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "nested": {
                  "path": "visibility",
                  "query": {
                    "bool": {
                      "must_not": [
                        {
                          "term": {
                            "visibility.search_hide": {
                              "value": true
                            }
                          }
                        }
                      ],
                      "should": [
                        {
                          "bool": {
                            "must_not": {
                              "exists": {
                                "field": "visibility.search_range"
                              }
                            }
                          }
                        },
                        {
                          "bool": {
                            "filter": [
                              {
                                "term": {
                                  "visibility.search_range": {
                                    "value": "now"
                                  }
                                }
                              }
                            ]
                          }
                        }
                      ],
                      "minimum_should_match": 1
                    }
                  }
                }
              }
            ],
            "must_not": [
              {
                "term": {
                  "k_post_status": "trash"
                }
              },
              {
                "term": {
                  "visibility.search_hide": {
                    "value": true
                  }
                }
              }
            ],
            "should": [
              {
                "bool": {
                  "must_not": {
                    "exists": {
                      "field": "visibility.search_range"
                    }
                  }
                }
              },
              {
                "bool": {
                  "filter": [
                    {
                      "term": {
                        "visibility.search_range": {
                          "value": "now"
                        }
                      }
                    }
                  ]
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ]
    }
  },
  "sort": {
    "d_published": "desc"
  }
}
