{
  "size": 1,
  "_source": [
    "wpid",
    "title",
    "post_slug",
    "description"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        }
      ],
      "must": [
        {
          "term": {
            "is_press_release": true
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
