{
  "size": 20,
  "_source": [
    "site",
    "path",
    "title",
    "image.original",
    "d_published"
  ],
  "query": {
    "bool": {
      "filter": [
        {
          "bool": {
            "filter": [
              {
                "term": {
                  "type": "tfn-post"
                }
              },
              {
                "terms": {
                  "k_post_type": [
                    "news",
                    "list",
                    "feature"
                  ]
                }
              }
            ],
            "must_not": [
              {
                "term": {
                  "visibility.search_hide": {
                    "value": true
                  }
                }
              }
            ],
            "should": [
              {
                "bool": {
                  "must_not": {
                    "exists": {
                      "field": "visibility.search_range"
                    }
                  }
                }
              },
              {
                "bool": {
                  "filter": [
                    {
                      "term": {
                        "visibility.search_range": {
                          "value": "now"
                        }
                      }
                    }
                  ]
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ]
    }
  },
  "sort": {
    "d_published": "desc"
  }
}
