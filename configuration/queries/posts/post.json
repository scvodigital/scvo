{
  "size": 1,
  "_source": [
    "wpid",
    "slug",
    "title",
    "sub_title",
    "og_title",
    "og_image",
    "og_summary",
    "rendered.json_ld",
    "publish_on",
    "updated",
    "content",
    "author",
    "author_name_full",
    "author_job_title",
    "author_organisation_name",
    "author_slug",
    "author_avatar",
    "author_sfid",
    "categories",
    "categories_slug",
    "categories_id",
    "post_tags",
    "post_tags_slug",
    "post_tags_id",
    "header_background",
    "header_text",
    "hide_overlay",
    "is_press_release"
  ],
  "query": {
    "bool": {
      "must": [
        {{#if @root.request.params.id ~}}
        {
          "term": {
            "wpid": {{@root.request.params.id}}
          }
        }
        {{else}}
        {
          "wildcard": {
            "post_slug": "*_{{@root.request.params.year}}_{{@root.request.params.month}}_{{@root.request.params.day}}_{{@root.request.params.slug}}"
          }
        }
        {{/if ~}}
      ]
    }
  }
}
